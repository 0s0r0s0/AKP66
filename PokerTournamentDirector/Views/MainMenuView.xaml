<Window x:Class="PokerTournamentDirector.Views.MainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AK 66 POKER CLUB" 
        Height="700" Width="1000"
        Background="#1a1a2e"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="20"
                               Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                          Text="{TemplateBinding Tag}"
                                          FontSize="42"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="1"
                                          Text="{TemplateBinding Content}"
                                          Foreground="{TemplateBinding Foreground}"
                                          FontSize="{TemplateBinding FontSize}"
                                          FontWeight="{TemplateBinding FontWeight}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextWrapping="Wrap"
                                          TextAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--  HEADER  -->
        <Border Grid.Row="0" Background="#0f3460" Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titre principal avec effet nÃ©on -->
                <TextBlock Grid.Row="0"
                   Text="â™ ï¸ AK 66 Poker Manager â™¥ï¸" 
                   FontSize="42" 
                   FontWeight="Bold" 
                   Foreground="#00ff88"
                   HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect x:Name="NeonEffect"
                                  Color="#00ff88" 
                                  BlurRadius="25" 
                                  ShadowDepth="0"
                                  Opacity="1.0"/>
                    </TextBlock.Effect>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <!-- Effet de nÃ©on rÃ©aliste avec variations alÃ©atoires -->
                                    <DoubleAnimationUsingKeyFrames
                                Storyboard.TargetName="NeonEffect"
                                Storyboard.TargetProperty="Opacity">
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:0.0"/>
                                        <LinearDoubleKeyFrame Value="0.9" KeyTime="0:0:0.5"/>
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:0.8"/>
                                        <LinearDoubleKeyFrame Value="0.7" KeyTime="0:0:1.2"/>
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:1.4"/>
                                        <LinearDoubleKeyFrame Value="0.8" KeyTime="0:0:2.0"/>
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:2.3"/>
                                        <LinearDoubleKeyFrame Value="0.6" KeyTime="0:0:2.8"/>
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:3.0"/>
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:4.0"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:4.1"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:4.2"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:4.3"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:4.4"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:7.1"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:7.2"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:7.3"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:7.4"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:10.1"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:10.2"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:10.3"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:10.4"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:12.1"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:12.2"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:12.3"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:12.4"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:15.1"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:15.2"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:15.3"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:15.4"/>
                                    </DoubleAnimationUsingKeyFrames>

                                    <DoubleAnimationUsingKeyFrames
                                Storyboard.TargetName="NeonEffect"
                                Storyboard.TargetProperty="BlurRadius">
                                        <LinearDoubleKeyFrame Value="25" KeyTime="0:0:0.0"/>
                                        <LinearDoubleKeyFrame Value="30" KeyTime="0:0:1.0"/>
                                        <LinearDoubleKeyFrame Value="25" KeyTime="0:0:2.0"/>
                                        <LinearDoubleKeyFrame Value="28" KeyTime="0:0:3.0"/>
                                        <LinearDoubleKeyFrame Value="25" KeyTime="0:0:4.0"/>
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>

                <!-- Sous-titre  -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sous-titre centrÃ© -->
                    <TextBlock Grid.Column="1" x:Name="txtSubtitle"
                       Text="Los Reneg'As Â¡Hasta la victoria siempre!" 
                       FontSize="18" 
                       Foreground="#a0a0a0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"        
                       Margin="0,10,0,0"/>

                   
                </Grid>
            </Grid>
        </Border>

        <!-- MENU PRINCIPAL -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40">

                <!-- PREMIÃˆRE LIGNE : Actions principales -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="NOUVEAU TOURNOI" 
                           Tag="âž•"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#00ff88" 
                           Foreground="#1a1a2e"
                           Click="NewTournament_Click"/>

                    <Button Content="REPRENDRE TOURNOI" 
                           Tag="â–¶ï¸"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#ffd700" 
                           Foreground="#1a1a2e"
                           Click="ResumeTournament_Click"/>
                </StackPanel>

                <!-- DEUXIÃˆME LIGNE : Configuration -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="GESTION JOUEURS" 
                           Tag="ðŸ‘¥"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#0f3460" 
                           Foreground="White"
                           Click="ManagePlayers_Click"/>

                    <Button Content="STRUCTURES BLINDS" 
                           Tag="ðŸ“Š"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#0f3460" 
                           Foreground="White"
                           Click="BlindStructures_Click"/>

                    <Button Content="MODÃˆLES TOURNOIS" 
                           Tag="ðŸ“"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#0f3460" 
                           Foreground="White"
                           Click="TournamentTemplates_Click"/>
                </StackPanel>

                <!-- TROISIÃˆME LIGNE : ParamÃ¨tres -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Cursor="">

                    <Button Content="CHAMPIONNAT" 
                            Tag="ðŸ†"
                            Background="#16213e" 
                            Foreground="White"
                            Click="Championship_Click"
                            Style="{StaticResource MenuButtonStyle}" Cursor="Hand"/>



                    <Button Content="PARAMÃˆTRES" 
                           Tag="âš™ï¸"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#16213e" 
                           Foreground="White"
                           Click="Settings_Click"/>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#0f3460" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Version -->
                <TextBlock Grid.Column="0"
           Text="Version 2.0.1"
           FontSize="12"
           Foreground="#666"
           VerticalAlignment="Center"/>

                <!-- Bloc centrÃ© : saison + boutons horizontal -->
                <StackPanel Grid.Column="1"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,4">

                    <TextBlock x:Name="txtCurrentSeasonName"
               Text="Aucune saison active"
               FontSize="12"
               Foreground="#909090"
               VerticalAlignment="Center"
               Margin="0,0,16,0"
               Opacity="0.9"/>

                    <Button Click="QuickAccessTournament_Click"
        Width="160" Height="32"
        Margin="0,0,12,0"
        Background="Transparent"
        BorderBrush="#00ff88"  
                        BorderThickness="1"
        Cursor="Hand">
                        
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="BorderLancer"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="12,4">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸš€" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Manche suivante" 
                                           FontSize="12" 
                                           Foreground="#e0e0e0" 
                                           VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="BorderLancer" Property="Background" Value="#00ff8818"/>
                                                    <Setter TargetName="BorderLancer" Property="BorderBrush" Value="#00ff88a0"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="BorderLancer" Property="Background" Value="#00ff8830"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Classement -->
                    <Button Click="QuickAccessChampionship_Click"
            Width="140" Height="32"
            Background="Transparent"
            BorderBrush="#00ff88"
            BorderThickness="1"
            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="BorderClassement"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5"
                                    Padding="12,4">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“Š" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Classement" 
                                               FontSize="12" 
                                               Foreground="#e0e0e0" 
                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="BorderClassement" Property="Background" Value="#00ff8818"/>
                                                    <Setter TargetName="BorderClassement" Property="BorderBrush" Value="#00ff88a0"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="BorderClassement" Property="Background" Value="#00ff8830"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Quitter -->
                <Button Grid.Column="2"
        Content="Quitter"
        Click="Quit_Click"
        HorizontalAlignment="Right"
        Width="100" Height="35"
        Background="#e94560"
        Foreground="White"
        FontSize="14"/>
            </Grid>
        </Border>
    </Grid>
</Window>
