<Window x:Class="PokerTournamentDirector.Views.MainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AK 66 POKER CLUB" 
        Height="700" Width="1000"
        Background="#1a1a2e"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="20"
                               Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                          Text="{TemplateBinding Tag}"
                                          FontSize="42"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="1"
                                          Text="{TemplateBinding Content}"
                                          Foreground="{TemplateBinding Foreground}"
                                          FontSize="{TemplateBinding FontSize}"
                                          FontWeight="{TemplateBinding FontWeight}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextWrapping="Wrap"
                                          TextAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#0f3460" Padding="30">
            <StackPanel>
                <TextBlock Text="â™ ï¸ AK 66 Poker Manager â™¥ï¸" 
           FontSize="42" 
           FontWeight="Bold" 
           Foreground="#00ff88"
           HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect x:Name="NeonEffect"
                          Color="#00ff88" 
                          BlurRadius="25" 
                          ShadowDepth="0"
                          Opacity="1.0"/>
                    </TextBlock.Effect>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!-- Effet de nÃ©on rÃ©aliste avec variations alÃ©atoires -->
                                    <DoubleAnimationUsingKeyFrames
                        Storyboard.TargetName="NeonEffect"
                        Storyboard.TargetProperty="Opacity">
                                        <!-- SÃ©quence sur 4 secondes -->
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:0.0"/>
                                        <LinearDoubleKeyFrame Value="0.9" KeyTime="0:0:0.5"/>
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:0.8"/>
                                        <LinearDoubleKeyFrame Value="0.7" KeyTime="0:0:1.2"/>
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:1.4"/>
                                        <LinearDoubleKeyFrame Value="0.8" KeyTime="0:0:2.0"/>
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:2.3"/>
                                        <LinearDoubleKeyFrame Value="0.6" KeyTime="0:0:2.8"/>
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:3.0"/>
                                        <LinearDoubleKeyFrame Value="1.0" KeyTime="0:0:4.0"/>
                                        <!-- Clignotement rapide Ã  la fin -->
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:4.1"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:4.2"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:4.3"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:4.4"/>
                                        <!-- Clignotement rapide Ã  la fin -->
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:7.1"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:7.2"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:7.3"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:7.4"/>
                                        <!-- Clignotement rapide Ã  la fin -->
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:10.1"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:10.2"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:10.3"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:10.4"/>
                                        <!-- Clignotement rapide Ã  la fin -->
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:12.1"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:12.2"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:12.3"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:12.4"/>
                                        <!-- Clignotement rapide Ã  la fin -->
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:15.1"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:15.2"/>
                                        <DiscreteDoubleKeyFrame Value="0.3" KeyTime="0:0:15.3"/>
                                        <DiscreteDoubleKeyFrame Value="1.0" KeyTime="0:0:15.4"/>

                                    </DoubleAnimationUsingKeyFrames>

                                    <!-- Animation du flou pour effet de scintillement -->
                                    <DoubleAnimationUsingKeyFrames
                        Storyboard.TargetName="NeonEffect"
                        Storyboard.TargetProperty="BlurRadius">
                                        <LinearDoubleKeyFrame Value="25" KeyTime="0:0:0.0"/>
                                        <LinearDoubleKeyFrame Value="30" KeyTime="0:0:1.0"/>
                                        <LinearDoubleKeyFrame Value="25" KeyTime="0:0:2.0"/>
                                        <LinearDoubleKeyFrame Value="28" KeyTime="0:0:3.0"/>
                                        <LinearDoubleKeyFrame Value="25" KeyTime="0:0:4.0"/>
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>

                <TextBlock Text="Los Reneg'As Â¡Hasta la victoria siempre!" 
                          FontSize="18" 
                          Foreground="#a0a0a0"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- MENU PRINCIPAL -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40">

                <!-- PREMIÃˆRE LIGNE : Actions principales -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="NOUVEAU TOURNOI" 
                           Tag="âž•"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#00ff88" 
                           Foreground="#1a1a2e"
                           Click="NewTournament_Click"/>

                    <Button Content="REPRENDRE TOURNOI" 
                           Tag="â–¶ï¸"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#ffd700" 
                           Foreground="#1a1a2e"
                           Click="ResumeTournament_Click"/>
                </StackPanel>

                <!-- DEUXIÃˆME LIGNE : Configuration -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="GESTION JOUEURS" 
                           Tag="ðŸ‘¥"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#0f3460" 
                           Foreground="White"
                           Click="ManagePlayers_Click"/>

                    <Button Content="STRUCTURES BLINDS" 
                           Tag="ðŸ“Š"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#0f3460" 
                           Foreground="White"
                           Click="BlindStructures_Click"/>

                    <Button Content="MODÃˆLES TOURNOIS" 
                           Tag="ðŸ“"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#0f3460" 
                           Foreground="White"
                           Click="TournamentTemplates_Click"/>
                </StackPanel>

                <!-- TROISIÃˆME LIGNE : ParamÃ¨tres -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Cursor="">

                    <Button Content="CHAMPIONNAT" 
                            Tag="ðŸ†"
                            Background="#16213e" 
                            Foreground="White"
                            Click="Championship_Click"
                            Style="{StaticResource MenuButtonStyle}" Cursor="Hand"/>

                    
                    
                    <Button Content="PARAMÃˆTRES" 
                           Tag="âš™ï¸"
                           Style="{StaticResource MenuButtonStyle}"
                           Background="#16213e" 
                           Foreground="White"
                           Click="Settings_Click"/>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
<Border Grid.Row="2" Background="#0f3460" Padding="15">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Version Ã  gauche -->
        <TextBlock Grid.Column="0"
                  Text="Version 2.0.1" 
                  FontSize="12" 
                  Foreground="#666"
                  VerticalAlignment="Center"/>
        
        <!-- Logo + Message au centre -->
        <StackPanel Grid.Column="1"
                   Orientation="Horizontal"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            
            <TextBlock Text="CrÃ©ez vos joueurs et structures de blinds avant de lancer un tournoi" 
                      FontSize="13" 
                      Foreground="#a0a0a0"
                      VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Bouton Ã  droite -->
        <Button Grid.Column="2"
               Content="Quitter" 
               Click="Quit_Click"
               HorizontalAlignment="Right"
               Width="100" Height="35"
               Background="#e94560"
               Foreground="White"
               FontSize="14"/>
    </Grid>
</Border>
    </Grid>
</Window>
