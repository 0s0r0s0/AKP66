<Window x:Class="PokerTournamentDirector.Views.TournamentEndValidationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="âœ… Validation fin de tournoi" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âœ… Validation du classement"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#00ff88"/>
            <TextBlock Text="{Binding Tournament.Name, Mode=OneWay}"
                       FontSize="18"
                       Foreground="White"
                       Margin="0,5,0,0"/>
            
            <Border Background="#0f3460"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,15,0,0"
                    Visibility="{Binding IsChampionshipMatch, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ†"
                               FontSize="24"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Manche de championnat"
                                   Foreground="#00ff88"
                                   FontSize="14"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Les points seront calculÃ©s automatiquement aprÃ¨s validation"
                                   Foreground="White"
                                   FontSize="12"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Classement -->
        <Border Grid.Row="1"
                Background="#0f3460"
                CornerRadius="10"
                BorderBrush="#00ff88"
                BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Instructions -->
                <Border Grid.Row="0"
                        Background="#16213e"
                        Padding="15"
                        CornerRadius="10,10,0,0">
                    <TextBlock TextWrapping="Wrap" Foreground="White" FontSize="13">
                        <Run Text="ðŸ“ VÃ©rifiez le classement ci-dessous."/>
                        <LineBreak/>
                        <Run Text="Double-cliquez sur une ligne pour modifier la position si nÃ©cessaire."/>
                    </TextBlock>
                </Border>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Results}"
                          SelectedItem="{Binding SelectedResult}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          Background="Transparent"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#16213e"
                          RowBackground="#0f3460"
                          AlternatingRowBackground="#16213e"
                          Foreground="White"
                          FontSize="14"
                          Margin="0,0,0,10"
                          MouseDoubleClick="DataGrid_MouseDoubleClick">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#16213e"/>
                            <Setter Property="Foreground" Value="#00ff88"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="12"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#00ff88"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsModified}" Value="True">
                                    <Setter Property="Background" Value="#e94560"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Position" 
                                            Binding="{Binding CurrentPosition}" 
                                            Width="100"
                                            IsReadOnly="False"/>
                        
                        <DataGridTextColumn Header="Joueur" 
                                            Binding="{Binding PlayerName}" 
                                            Width="2*"
                                            IsReadOnly="True"/>
                        
                        <DataGridTextColumn Header="Bounties" 
                                            Binding="{Binding Bounties}" 
                                            Width="*"
                                            IsReadOnly="True"/>
                        
                        <DataGridTextColumn Header="Gains" 
                                            Binding="{Binding Winnings, StringFormat=C0}" 
                                            Width="*"
                                            IsReadOnly="True"/>

                        <DataGridTemplateColumn Header="Statut" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="âœ“ OK"/>
                                                <Setter Property="Foreground" Value="#00ff88"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsModified}" Value="True">
                                                        <Setter Property="Text" Value="âš  ModifiÃ©"/>
                                                        <Setter Property="Foreground" Value="Yellow"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Loader / Message de progression -->
        <Border Grid.Row="2"
                Background="#0f3460"
                CornerRadius="8"
                Padding="15"
                Margin="0,15,0,15"
                Visibility="{Binding IsValidating, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="â³"
                           FontSize="20"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock Text="{Binding ValidationMessage}"
                           Foreground="#00ff88"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Boutons -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="âŒ Annuler"
                    Command="{Binding CancelCommand}"
                    Visibility="{Binding IsValidating, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                    HorizontalAlignment="Left"
                    Width="150"
                    Height="50"
                    Background="#e94560"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="15,10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#c93750"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="1"
                    Content="âœ… Valider et calculer"
                    Command="{Binding ValidateAndProcessCommand}"
                    IsEnabled="{Binding IsValidating, Converter={StaticResource InverseBoolConverter}}"
                    Width="200"
                    Height="50"
                    Background="#00ff88"
                    Foreground="#1a1a2e"
                    FontSize="16"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="15,10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#00cc6a"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Overlay si en cours de validation (empÃªche fermeture) -->
        <Border Grid.RowSpan="4"
                Background="#80000000"
                Visibility="{Binding IsValidating, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</Window>
