<Window x:Class="PokerTournamentDirector.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" 
        Height="Auto" Width="450"
        SizeToContent="Height"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="8"
                               BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#1a1a2e" 
            CornerRadius="15" 
            BorderBrush="#00ff88" 
            BorderThickness="2"
            Padding="0">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#0f3460" 
                    CornerRadius="13,13,0,0" 
                    Padding="20,15">
                <Grid>
                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <Button Content="✕" 
                            HorizontalAlignment="Right"
                            Width="30" Height="30"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Border x:Name="IconBorder"
                        Grid.Column="0"
                        Width="60" 
                        Height="60"
                        CornerRadius="30"
                        Background="#00ff88"
                        VerticalAlignment="Top"
                        Margin="0,0,20,0">
                    <TextBlock x:Name="IconText"
                              Text="ℹ️"
                              FontSize="32"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>

                <!-- Message -->
                <TextBlock x:Name="MessageText"
                          Grid.Column="1"
                          Text="Message"
                          FontSize="16"
                          Foreground="White"
                          TextWrapping="Wrap"
                          VerticalAlignment="Center"
                          LineHeight="24"/>
            </Grid>

            <!-- Buttons -->
            <Border Grid.Row="2" 
                    Background="#16213e" 
                    CornerRadius="0,0,13,13" 
                    Padding="20">
                <StackPanel x:Name="ButtonsPanel" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"/>
            </Border>
        </Grid>
    </Border>
</Window>
