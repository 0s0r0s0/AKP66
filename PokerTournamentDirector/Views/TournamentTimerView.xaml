<Window x:Class="PokerTournamentDirector.Views.TournamentTimerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PokerTournamentDirector.ViewModels"
        Title="Poker Tournament Timer" 
        Height="1080" Width="1920"
        Background="#1a1a2e"
        WindowState="Maximized"
        WindowStyle="None"
        KeyDown="Window_KeyDown"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Style pour gros textes -->
        <Style x:Key="BigNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="120"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#00ff88"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MediumNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="72"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="#a0a0a0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Style pour les cartes info -->
        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Style pour les stats -->
        <Style x:Key="StatStyle" TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#a0a0a0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="42"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Style pour le timer avec triggers -->
        <Style x:Key="TimerStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="180"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#00ff88"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPaused}" Value="True">
                    <Setter Property="Foreground" Value="#ffd700"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
            <RowDefinition Height="180"/>
            <!-- Stats bar -->
            <RowDefinition Height="80"/>
            <!-- Controls -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#0f3460" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Nom du tournoi -->
                <TextBlock Grid.Column="0" 
                          Text="{Binding TournamentName}" 
                          Style="{StaticResource HeaderStyle}"
                          FontSize="36"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"/>

                <!-- Horloge et durÃ©e -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ• " FontSize="28" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentTime}" FontSize="36" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="  |  DurÃ©e: " FontSize="20" Foreground="#a0a0a0" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <TextBlock Text="{Binding TournamentDuration}" FontSize="28" FontWeight="Bold" Foreground="#ffd700" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Raccourcis clavier -->
                <TextBlock Grid.Column="2"
                          Text="[ESC] Quitter | [ESPACE] Pause | [â†’] Next | [E] Ã‰lim. | [B] Blinds | [P] Joueurs" 
                          FontSize="14" 
                          Foreground="#a0a0a0"
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="40,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- BLINDS ACTUELLES -->
            <Border Grid.Column="0" Style="{StaticResource InfoCardStyle}">
                <StackPanel>
                    <TextBlock Text="BLINDS ACTUELLES" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding SmallBlind, StringFormat='{}{0:N0}'}" 
                              Style="{StaticResource MediumNumberStyle}"
                              Foreground="#ffd700"/>
                    <TextBlock Text="/" FontSize="48" Foreground="White" HorizontalAlignment="Center" Margin="0,5"/>
                    <TextBlock Text="{Binding BigBlind, StringFormat='{}{0:N0}'}" 
                              Style="{StaticResource MediumNumberStyle}"
                              Foreground="#ffd700"/>

                    <TextBlock Text="{Binding Ante, StringFormat='Ante: {0:N0}'}" 
                              FontSize="36" 
                              Foreground="#ff6b6b"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,0"
                              Visibility="{Binding Ante, Converter={StaticResource ZeroToCollapsedConverter}}"/>

                    <!-- Bouton Ã©diter blinds -->
                    <Button Content="âœï¸ Modifier" 
                           Click="EditBlinds_Click"
                           Height="35"
                           Background="#0f3460"
                           Foreground="White"
                           FontSize="14"
                           BorderThickness="0"
                           Margin="0,20,0,0"
                           Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- TIMER CENTRAL -->
            <Border Grid.Column="1" Style="{StaticResource InfoCardStyle}">
                <Grid>
                    <!-- Mode normal (non pause structurÃ©e et non terminÃ©) -->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBreak}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsTournamentFinished}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        
                        <TextBlock Text="{Binding CurrentLevel, StringFormat='NIVEAU {0}'}" 
                                  Style="{StaticResource LabelStyle}"
                                  FontSize="40"/>

                        <TextBlock Text="{Binding TimeRemaining}" 
                                  Style="{StaticResource TimerStyle}"
                                  Margin="0,20">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#00ff88" BlurRadius="30" ShadowDepth="0"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <!-- Indicateur PAUSE -->
                        <TextBlock Text="â¸ EN PAUSE" 
                                  FontSize="32" 
                                  FontWeight="Bold"
                                  Foreground="#ffd700"
                                  HorizontalAlignment="Center"
                                  Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibleConverter}}"/>

                        <ProgressBar Value="{Binding TotalSecondsRemaining}" 
                                    Maximum="{Binding ProgressBarMaximum}"
                                    Height="20"
                                    Margin="40,20,40,0"
                                    Background="#2a2a3e"
                                    Foreground="#00ff88"
                                    BorderThickness="0"/>

                        <!-- Temps avant prochaine pause -->
                        <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Run Text="Prochaine pause dans : " FontSize="18" Foreground="#a0a0a0"/>
                            <Run Text="{Binding TimeToNextBreak}" FontSize="22" FontWeight="Bold" Foreground="#ffd700"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Mode PAUSE STRUCTURÃ‰E (Break) - cachÃ© si tournoi terminÃ© -->
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsBreak}" Value="True"/>
                                            <Condition Binding="{Binding IsTournamentFinished}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="â˜• PAUSE" 
                                  Style="{StaticResource BigNumberStyle}"
                                  FontSize="100"
                                  Foreground="#ff6b6b"/>
                        <TextBlock Text="{Binding BreakName}" 
                                  Style="{StaticResource MediumNumberStyle}"
                                  FontSize="48"
                                  Margin="0,20"/>
                        <TextBlock Text="{Binding TimeRemaining}" 
                                  Style="{StaticResource MediumNumberStyle}"
                                  Foreground="#ffd700"
                                  FontSize="80"
                                  Margin="0,20"/>
                    </StackPanel>

                    <!-- Mode TOURNOI TERMINÃ‰ -->
                    <StackPanel Visibility="{Binding IsTournamentFinished, Converter={StaticResource BoolToVisibleConverter}}"
                               VerticalAlignment="Center">
                        <TextBlock Text="ðŸ† TOURNOI TERMINÃ‰ ðŸ†" 
                                  Style="{StaticResource BigNumberStyle}"
                                  FontSize="80"
                                  Foreground="#ffd700"/>
                        <TextBlock Text="Vainqueur" 
                                  FontSize="32"
                                  Foreground="#a0a0a0"
                                  HorizontalAlignment="Center"
                                  Margin="0,30,0,10"/>
                        <TextBlock Text="{Binding WinnerName}" 
                                  Style="{StaticResource MediumNumberStyle}"
                                  FontSize="64"
                                  Foreground="#00ff88"/>
                        <TextBlock Text="{Binding PrizePool, StringFormat='Prize Pool: {0:C}'}" 
                                  FontSize="36"
                                  Foreground="#ffd700"
                                  HorizontalAlignment="Center"
                                  Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- NEXT BLINDS -->
            <Border Grid.Column="2" Style="{StaticResource InfoCardStyle}">
                <StackPanel>
                    <TextBlock Text="PROCHAINES BLINDS" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding NextSmallBlind, StringFormat='{}{0:N0}'}" 
                              Style="{StaticResource MediumNumberStyle}"
                              Foreground="#a0a0a0"/>
                    <TextBlock Text="/" FontSize="48" Foreground="#a0a0a0" HorizontalAlignment="Center" Margin="0,5"/>
                    <TextBlock Text="{Binding NextBigBlind, StringFormat='{}{0:N0}'}" 
                              Style="{StaticResource MediumNumberStyle}"
                              Foreground="#a0a0a0"/>

                    <TextBlock Text="{Binding NextAnte, StringFormat='Ante: {0:N0}'}" 
                              FontSize="36" 
                              Foreground="#ff6b6b"
                              Opacity="0.6"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,0"
                              Visibility="{Binding NextAnte, Converter={StaticResource ZeroToCollapsedConverter}}"/>

                    <!-- Indicateur Late Registration -->
                    <Border Background="#16213e" CornerRadius="10" Padding="10" Margin="0,20,0,0"
                           Visibility="{Binding CanAddLatePlayers, Converter={StaticResource BoolToVisibleConverter}}">
                        <TextBlock Text="ðŸ“ Inscriptions ouvertes" 
                                  FontSize="16" 
                                  Foreground="#00ff88"
                                  HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- STATS BAR (ComplÃ¨te) -->
        <Border Grid.Row="2" Background="#0f3460" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- EntrÃ©es -->
                <StackPanel Grid.Column="0" Style="{StaticResource StatStyle}">
                    <TextBlock Text="ENTRÃ‰ES" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding TotalEntries}" Style="{StaticResource StatValueStyle}" Foreground="White"/>
                </StackPanel>

                <!-- Recaves -->
                <StackPanel Grid.Column="1" Style="{StaticResource StatStyle}">
                    <TextBlock Text="RECAVES" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding TotalRebuys}" Style="{StaticResource StatValueStyle}" Foreground="#ffd700"/>
                </StackPanel>

                <!-- Joueurs restants -->
                <StackPanel Grid.Column="2" Style="{StaticResource StatStyle}">
                    <TextBlock Text="JOUEURS RESTANTS" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding PlayersRemaining}" Style="{StaticResource StatValueStyle}" Foreground="#00ff88"/>
                </StackPanel>

                <!-- Tapis moyen -->
                <StackPanel Grid.Column="3" Style="{StaticResource StatStyle}">
                    <TextBlock Text="TAPIS MOYEN" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding AverageStack, StringFormat='{}{0:N0}'}" Style="{StaticResource StatValueStyle}" Foreground="White"/>
                </StackPanel>

                <!-- Jetons totaux -->
                <StackPanel Grid.Column="4" Style="{StaticResource StatStyle}">
                    <TextBlock Text="JETONS TOTAUX" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding TotalChips, StringFormat='{}{0:N0}'}" Style="{StaticResource StatValueStyle}" Foreground="White" FontSize="36"/>
                </StackPanel>

                <!-- Prize Pool -->
                <StackPanel Grid.Column="5" Style="{StaticResource StatStyle}">
                    <TextBlock Text="PRIZE POOL" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding PrizePool, StringFormat='{}{0:N0} â‚¬'}" Style="{StaticResource StatValueStyle}" Foreground="#ffd700"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTROLS -->
        <Border Grid.Row="3" Background="#1a1a2e" Padding="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="â—„ Level PrÃ©cÃ©dent" 
                       Command="{Binding PreviousLevelCommand}"
                       Width="180" Height="50"
                       Background="#e94560" 
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"
                       BorderThickness="0"
                       Margin="5,0"
                       Cursor="Hand"/>

                <Button Content="Level Suivant â–º" 
                       Command="{Binding NextLevelCommand}"
                       Width="180" Height="50"
                       Background="#0f3460" 
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"
                       BorderThickness="0"
                       Margin="5,0"
                       Cursor="Hand"/>

                <Button Content="â–¶ DÃ‰MARRER" 
                       Command="{Binding StartTournamentCommand}"
                       Visibility="{Binding IsRunning, Converter={StaticResource BoolToCollapsedConverter}}"
                       Width="200" Height="50"
                       Background="#00ff88" 
                       Foreground="#1a1a2e"
                       FontSize="20"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Margin="5,0"
                       Cursor="Hand"/>

                <Button Content="â¸ PAUSE" 
                       Command="{Binding PauseTournamentCommand}"
                       Visibility="{Binding IsPaused, Converter={StaticResource BoolToCollapsedConverter}}"
                       Width="180" Height="50"
                       Background="#ffd700" 
                       Foreground="#1a1a2e"
                       FontSize="18"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Margin="5,0"
                       Cursor="Hand"/>

                <Button Content="â–¶ REPRENDRE" 
                       Command="{Binding ResumeTournamentCommand}"
                       Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibleConverter}}"
                       Width="180" Height="50"
                       Background="#00ff88" 
                       Foreground="#1a1a2e"
                       FontSize="18"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Margin="5,0"
                       Cursor="Hand"/>


                <Button Content="ðŸ’€ Ã‰LIMINATIONS" 
                       Click="Eliminations_Click"
                       Width="180" Height="50"
                       Background="#e94560" 
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Margin="5,0"
                       Cursor="Hand"/>

                <Button Content="ðŸ‘¥ JOUEURS" 
                       Click="Players_Click"
                       Width="150" Height="50"
                       Background="#0f3460" 
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"
                       BorderThickness="0"
                       Margin="5,0"
                       Cursor="Hand"
                       Visibility="{Binding CanAddLatePlayers, Converter={StaticResource BoolToVisibleConverter}}"/>

                <Button Content="ðŸŽ±â€‹ TABLES" 
                       Click="Settings_Click"
                       Width="150" Height="50"
                       Background="#0f3460" 
                       Foreground="White"
                       FontSize="16"
                        FontWeight="SemiBold"
                       BorderThickness="0"
                       Margin="5,0"
                       Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
