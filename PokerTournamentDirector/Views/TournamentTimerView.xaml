<Window x:Class="PokerTournamentDirector.Views.TournamentTimerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PokerTournamentDirector.ViewModels"
        Title="Poker Tournament Timer" 
        Height="1080" Width="1920"
        Background="#1a1a2e"
        WindowState="Maximized"
        WindowStyle="None"
        KeyDown="Window_KeyDown"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Style pour gros textes -->
        <Style x:Key="BigNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="120"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#00ff88"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MediumNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="72"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MediumAlternatNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="#a0a0a0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Style pour les cartes info -->
        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Style pour les stats -->
        <Style x:Key="StatStyle" TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#a0a0a0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="42"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Style pour le timer avec triggers -->
        <Style x:Key="TimerStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="270"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#00ff88"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPaused}" Value="True">
                    <Setter Property="Foreground" Value="#ffd700"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
            <RowDefinition Height="180"/>
            <!-- Stats bar -->
            <RowDefinition Height="80"/>
            <!-- Controls -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#0f3460" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Nom du tournoi + Badge championnat -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TournamentName}" 
                               Style="{StaticResource HeaderStyle}"
                               FontSize="36"
                               VerticalAlignment="Center"/>

                    <!-- Badge Championnat -->
                    <Border Background="#00ff88"
                            CornerRadius="8"
                            Padding="8,4"
                            Margin="15,0,0,0"
                            VerticalAlignment="Center"
                            Visibility="{Binding IsChampionshipMatch, Converter={StaticResource BoolToVisibleConverter}}">
                        <TextBlock Text="ðŸ† CHAMPIONNAT"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#1a1a2e"/>
                    </Border>
                </StackPanel>

                <!-- Horloge et durÃ©e -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ• " FontSize="28" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentTime}" FontSize="36" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="  |  DurÃ©e: " FontSize="20" Foreground="#a0a0a0" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <TextBlock Text="{Binding TournamentDuration}" FontSize="28" FontWeight="Bold" Foreground="#ffd700" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Raccourcis clavier -->
                <TextBlock Grid.Column="2"
                           Text="[S] Start/Pause | [K] Ã‰lim./Recave | [P] Joueurs | [B] Blinds | [M] Modifier Blinds [â†’] Niveau suivant | [â†] PrÃ©cÃ©dent | [ESC] Quitter" 
                           FontSize="14" 
                           Foreground="#a0a0a0"
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="40,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- BLINDS ACTUELLES -->
            <Border Grid.Column="0" Style="{StaticResource InfoCardStyle}">
                <StackPanel>
                    <TextBlock Text="BLINDS ACTUELLES" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding SmallBlind, StringFormat='{}{0:N0}'}" 
                               Style="{StaticResource MediumNumberStyle}"
                               Foreground="#ffd700"/>
                    <TextBlock Text="/" FontSize="48" Foreground="White" HorizontalAlignment="Center" Margin="0,5"/>
                    <TextBlock Text="{Binding BigBlind, StringFormat='{}{0:N0}'}" 
                               Style="{StaticResource MediumNumberStyle}"
                               Foreground="#ffd700"/>

                    <TextBlock Text="{Binding Ante, StringFormat='Ante: {0:N0}'}" 
                               FontSize="36" 
                               Foreground="#ff6b6b"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"
                               Visibility="{Binding Ante, Converter={StaticResource ZeroToCollapsedConverter}}"/>

                    <!-- Bouton Ã©diter blinds -->
                    <Button Content="âœï¸ Modifier" 
                            Click="EditBlinds_Click"
                            Height="35"
                            Background="#0f3460"
                            Foreground="White"
                            FontSize="14"
                            BorderThickness="0"
                            Margin="0,20,0,0"
                            Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- TIMER CENTRAL -->
            <Border Grid.Column="1" Style="{StaticResource InfoCardStyle}">
                <Grid>
                    <!-- Mode TOURNOI EN COURS -->
                    <StackPanel Visibility="{Binding IsTournamentFinished, Converter={StaticResource BoolToCollapsedConverter}}">
                        <TextBlock Text="{Binding CurrentLevelName}" 
                       FontSize="42" 
                       FontWeight="Bold"
                       Foreground="#00ff88"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                        <TextBlock Text="{Binding TimeRemaining}" 
                       Style="{StaticResource TimerStyle}"/>

                        <TextBlock Text="â¸ PAUSE" 
                       FontSize="42"
                       FontWeight="Bold"
                       Foreground="#ffd700"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibleConverter}}"/>

                    </StackPanel>

                    <!-- Mode TOURNOI TERMINÃ‰ -->
                    <!-- Canvas pour les confettis (doit Ãªtre au-dessus ou en arriÃ¨re-plan) -->
                    <!-- Canvas pour les confettis - DOIT COUVRIR TOUTE LA FENÃŠTRE -->
                    <Canvas x:Name="ConfettiCanvas" 
        Grid.RowSpan="3" Grid.ColumnSpan="3"
        ClipToBounds="False"
        IsHitTestVisible="False"
        Visibility="{Binding IsTournamentFinished, Converter={StaticResource BoolToVisibleConverter}}"
        Panel.ZIndex="9999"/>

                    <!-- Le panneau du vainqueur avec trophÃ©es animÃ©s -->
                    <StackPanel Visibility="{Binding IsTournamentFinished, Converter={StaticResource BoolToVisibleConverter}}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Panel.ZIndex="10000"
            Margin="0,50,0,0">

                        <!-- Coupe centrale avec effet magique (glow qui pulse + Ã©clat tournant) -->
                        <TextBlock Text="ðŸ†"
           FontSize="160"
           Foreground="#ffd700"
           VerticalAlignment="Center"
           HorizontalAlignment="Center">

    <!-- Glow magique -->
                            <TextBlock.Effect>
                                <DropShadowEffect x:Name="TrophyGlow"
                          Color="#FFFFA0"
                          Direction="0"
                          ShadowDepth="0"
                          BlurRadius="60"
                          Opacity="0.3"/>
                            </TextBlock.Effect>

    <!-- Le style qui dÃ©clenche l'animation -->
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsTournamentFinished}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">

                                                        <!-- Glow qui pulse (BlurRadius + Opacity) -->
                                                        <DoubleAnimation Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.BlurRadius)"
                                                 From="60" To="100"
                                                 Duration="0:0:3"
                                                 AutoReverse="True"
                                                 EasingFunction="{StaticResource SineEaseInOut}"/>

                                                        <DoubleAnimation Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.Opacity)"
                                                 From="0.3" To="0.8"
                                                 Duration="0:0:2.5"
                                                 AutoReverse="True"
                                                 EasingFunction="{StaticResource SineEaseInOut}"/>

                                                        <!-- Petit Ã©clat tournant (direction du glow qui tourne) -->
                                                        <DoubleAnimation Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.Direction)"
                                                 From="0" To="360"
                                                 Duration="0:0:8"
                                                 RepeatBehavior="Forever"/>

                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Reste du contenu (Vainqueur + nom) -->
                        <TextBlock Text="Vainqueur"
               FontSize="36"
               Foreground="#a0a0a0"
               HorizontalAlignment="Center"
               Margin="0,30,0,10"/>

                        <!-- Nom du gagnant avec animation festive -->
                        <TextBlock x:Name="WinnerNameText"
               Text="{Binding WinnerName}"
               FontSize="90"
               Foreground="#00ff88"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,20,0,0">

    <!-- Effet glow dorÃ© -->
                            <TextBlock.Effect>
                                <DropShadowEffect x:Name="GlowEffect"
                          Color="Gold"
                          Direction="0"
                          ShadowDepth="0"
                          BlurRadius="50"
                          Opacity="0"/>
                            </TextBlock.Effect>

    <!-- Transformation pour la pulsation -->
                            <TextBlock.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform" 
                        ScaleX="1" ScaleY="1" 
                        CenterX="0.5" CenterY="0.5"/>
                            </TextBlock.RenderTransform>

    <!-- LE SEUL STYLE : hÃ©rite de MediumNumberStyle + triggers -->
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource MediumNumberStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsTournamentFinished}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="VictoryAnimationStoryboard">
                                                    <Storyboard RepeatBehavior="3x">
                                                        <!-- Pulsation Ã©lÃ©gante : on cible depuis le TextBlock -->
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                 From="1.0" To="1.18"
                                                 Duration="0:0:1.4"
                                                 AutoReverse="True"
                                                 EasingFunction="{StaticResource QuadraticEaseInOut}"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                 From="1.0" To="1.18"
                                                 Duration="0:0:1.4"
                                                 AutoReverse="True"
                                                 EasingFunction="{StaticResource QuadraticEaseInOut}"/>

                                                        <!-- Glow qui pulse -->
                                                        <DoubleAnimation Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.Opacity)"
                                                 From="0.0" To="0.95"
                                                 Duration="0:0:1.4"
                                                 AutoReverse="True"
                                                 EasingFunction="{StaticResource QuadraticEaseInOut}"/>

                                                        <ColorAnimation Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.Color)"
                                                From="Gold" To="#FFFFB0"
                                                Duration="0:0:1.4"
                                                AutoReverse="True"
                                                EasingFunction="{StaticResource QuadraticEaseInOut}"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <TextBlock Text="{Binding PrizePool, StringFormat='Prize Pool: {0:C}'}"
               FontSize="36"
               Foreground="#ffd700"
               HorizontalAlignment="Center"
               Margin="0,40,0,0"
               Visibility="{Binding PrizePool, Converter={StaticResource ZeroToCollapsedConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- BLINDS SUIVANTES -->
            <Border Grid.Column="2" Style="{StaticResource InfoCardStyle}">
                <StackPanel>
                    <TextBlock Text="BLINDS SUIVANTES" Style="{StaticResource LabelStyle}"/>
                    <TextBlock Text="{Binding NextSmallBlind, StringFormat='{}{0:N0}'}" 
                               Style="{StaticResource MediumAlternatNumberStyle}"
                               Opacity="0.6"/>
                    <TextBlock Text="/" FontSize="24" Foreground="White" HorizontalAlignment="Center" Opacity="0.6" Margin="0,5"/>
                    <TextBlock Text="{Binding NextBigBlind, StringFormat='{}{0:N0}'}" 
                               Style="{StaticResource MediumAlternatNumberStyle}"
                               Opacity="0.6"/>

                    <TextBlock Text="{Binding NextAnte, StringFormat='Ante: {0:N0}'}" 
                               FontSize="36" 
                               Foreground="#ff6b6b"
                               Opacity="0.6"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"
                               Visibility="{Binding NextAnte, Converter={StaticResource ZeroToCollapsedConverter}}"/>

                    <!-- Indicateurs Late Registration et Rebuys -->
                    <StackPanel Margin="0,20,0,0">
                        <!-- Inscriptions ouvertes -->
                        <Border Background="#16213e" 
                                CornerRadius="10" 
                                Padding="10" 
                                Margin="0,0,0,8"
                                Visibility="{Binding CanAddLatePlayers, Converter={StaticResource BoolToVisibleConverter}}">
                            <TextBlock Text="ðŸ“ Inscriptions ouvertes" 
                                       FontSize="16" 
                                       Foreground="#00ff88"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Recaves ouvertes -->
                        <Border Background="#16213e" 
                                CornerRadius="10" 
                                Padding="10"
                                Margin="0,0,0,8"
                                Visibility="{Binding CanRebuy, Converter={StaticResource BoolToVisibleConverter}}">
                            <TextBlock FontSize="16" 
                                       Foreground="#ffd700"
                                       HorizontalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="ðŸ’° Recaves ouvertes"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLastRebuyLevel}" Value="True">
                                                <Setter Property="Text" Value="âš ï¸ DERNIER TOUR DE RECAVE"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0">
                <Run Text="Prochaine pause dans : " FontSize="18" Foreground="#a0a0a0"/>
                <Run Text="{Binding TimeToNextBreak}" FontSize="32" FontWeight="Bold" Foreground="#ffd700"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- STATS BAR -->
        <Border Grid.Row="2" Background="#0f3460" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- EntrÃ©es -->
                <StackPanel Grid.Column="0" Style="{StaticResource StatStyle}">
                    <TextBlock Text="ENTRÃ‰ES" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding TotalEntries}" Style="{StaticResource StatValueStyle}" Foreground="White"/>
                </StackPanel>

                <!-- Recaves -->
                <StackPanel Grid.Column="1" Style="{StaticResource StatStyle}">
                    <TextBlock Text="RECAVES" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding TotalRebuys}" Style="{StaticResource StatValueStyle}" Foreground="#ffd700"/>
                </StackPanel>

                <!-- Joueurs restants -->
                <StackPanel Grid.Column="2" Style="{StaticResource StatStyle}">
                    <TextBlock Text="JOUEURS RESTANTS" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding PlayersRemaining}" Style="{StaticResource StatValueStyle}" Foreground="#00ff88"/>
                </StackPanel>

                <!-- Tapis moyen -->
                <StackPanel Grid.Column="3" Style="{StaticResource StatStyle}">
                    <TextBlock Text="TAPIS MOYEN" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding AverageStack, StringFormat='{}{0:N0}'}" Style="{StaticResource StatValueStyle}" Foreground="White"/>
                </StackPanel>

                <!-- Jetons totaux -->
                <StackPanel Grid.Column="4" Style="{StaticResource StatStyle}">
                    <TextBlock Text="JETONS TOTAUX" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding TotalChips, StringFormat='{}{0:N0}'}" Style="{StaticResource StatValueStyle}" Foreground="White" FontSize="36"/>
                </StackPanel>

                <!-- Prize Pool (masquÃ© si 0) -->
                <StackPanel Grid.Column="5" 
                            Style="{StaticResource StatStyle}"
                            Visibility="{Binding PrizePool, Converter={StaticResource ZeroToCollapsedConverter}}">
                    <TextBlock Text="PRIZE POOL" Style="{StaticResource StatLabelStyle}"/>
                    <TextBlock Text="{Binding PrizePool, StringFormat='{}{0:N0} â‚¬'}" Style="{StaticResource StatValueStyle}" Foreground="#ffd700"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTROLS RÃ‰ORGANISÃ‰S -->
        <Border Grid.Row="3" Background="#1a1a2e" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Gauche: Navigation niveaux -->
                    <ColumnDefinition Width="2*"/>
                    <!-- Centre: Actions principales / Bouton Fermer -->
                    <ColumnDefinition Width="*"/>
                    <!-- Droite: Ã‰liminations/Joueurs/Tables/Blinds -->
                </Grid.ColumnDefinitions>

                <!-- GAUCHE: Navigation niveaux (discrets) -->
                <StackPanel Grid.Column="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                            Visibility="{Binding IsTournamentFinished, Converter={StaticResource BoolToCollapsedConverter}}">
                    <Button Content="â—„ Niveau prÃ©cÃ©dent" 
                    Command="{Binding PreviousLevelCommand}"
                    Width="120" 
                    Height="40"
                    Background="#2a2a3e" 
                    Foreground="#a0a0a0"
                    FontSize="13"
                    BorderThickness="1"
                    BorderBrush="#0f3460"
                    Margin="0,0,8,0"
                    Cursor="Hand"/>

                    <Button Content="Niveau suivant â–º" 
                    Command="{Binding NextLevelCommand}"
                    Width="120" 
                    Height="40"
                    Background="#2a2a3e" 
                    Foreground="#a0a0a0"
                    FontSize="13"
                    BorderThickness="1"
                    BorderBrush="#0f3460"
                    Cursor="Hand"/>
                </StackPanel>

                <!-- CENTRE: Actions principales OU Bouton Fermer -->
                <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Actions principales (visible quand tournoi NON terminÃ©) -->
                    <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding IsTournamentFinished, Converter={StaticResource BoolToCollapsedConverter}}">
                        <Button Content="â–¶ DÃ‰MARRER" 
                        Command="{Binding StartTournamentCommand}"
                        Visibility="{Binding IsRunning, Converter={StaticResource BoolToCollapsedConverter}}"
                        Width="200" 
                        Height="50"
                        Background="#00ff88" 
                        Foreground="#1a1a2e"
                        FontSize="20"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="5,0"
                        Cursor="Hand"/>

                        <Button Content="â¸ PAUSE" 
                        Command="{Binding PauseTournamentCommand}"
                        Visibility="{Binding IsPaused, Converter={StaticResource BoolToCollapsedConverter}}"
                        Width="180" 
                        Height="50"
                        Background="#ffd700" 
                        Foreground="#1a1a2e"
                        FontSize="18"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="5,0"
                        Cursor="Hand"/>

                        <Button Content="â–¶ REPRENDRE" 
                        Command="{Binding ResumeTournamentCommand}"
                        Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibleConverter}}"
                        Width="180" 
                        Height="50"
                        Background="#00ff88" 
                        Foreground="#1a1a2e"
                        FontSize="18"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="5,0"
                        Cursor="Hand"/>
                    </StackPanel>

                    <!-- Bouton Fermer (visible UNIQUEMENT quand tournoi terminÃ©) -->
                    <Button Content="ðŸšª FERMER"
                    Click="CloseWindow_Click"
                    Visibility="{Binding IsTournamentFinished, Converter={StaticResource BoolToVisibleConverter}}"
                    Width="250"
                    Height="55"
                    Background="#e94560"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Bold"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    Margin="5,0">
                        <Button.Effect>
                            <DropShadowEffect Color="#e94560" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                        </Button.Effect>
                    </Button>
                </Grid>

                <!-- DROITE: Ã‰liminations / Joueurs / Tables / blinds-->
                <StackPanel Grid.Column="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                            Visibility="{Binding IsTournamentFinished, Converter={StaticResource BoolToCollapsedConverter}}">
                    <Button Content="ðŸ’€ KILL" 
                    Click="Eliminations_Click"
                    Width="100" 
                    Height="50"
                    Background="#e94560" 
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Margin="5,0"
                    Cursor="Hand"/>

                    <Button Content="ðŸ‘¥ INSCRIRE" 
                    Click="Players_Click"
                    Width="100" 
                    Height="50"
                    Background="#0f3460" 
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Margin="5,0"
                    Cursor="Hand"
                    Visibility="{Binding CanAddLatePlayers, Converter={StaticResource BoolToVisibleConverter}}"/>

                    <Button Content="ðŸŽ± TABLES" 
                    Click="Settings_Click"
                    Width="100" 
                    Height="50"
                    Background="#0f3460" 
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Margin="5,0"
                    Cursor="Hand"/>

                    <Button Content="ðŸ“Š BLINDS" 
Command="{Binding ShowBlindStructureCommand}"
ToolTip="Voir la structure complÃ¨te des blinds"
Width="100" 
Height="50"
Background="#0f3460" 
Foreground="White"
FontSize="16"
FontWeight="SemiBold"
BorderThickness="0"
Margin="5,0"
Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
