<Window x:Class="PokerTournamentDirector.Views.BlindStructureEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📊 Éditeur de Structures de Blinds" 
        Height="850" Width="1400"
        Background="#1a1a2e"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#a0a0a0"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="RowBackground" Value="#16213e"/>
            <Setter Property="AlternatingRowBackground" Value="#1a1a2e"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <!-- Fond et couleurs cohérents avec ton thème -->
            <Setter Property="Background" Value="#0f3460" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#00ff88" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="FontSize" Value="15" />
            <!-- Un peu plus grand pour la lisibilité -->

            <!-- Ce qui corrige le texte écrasé -->
            <Setter Property="Padding" Value="12,10" />
            <!-- Espace intérieur généreux -->
            <Setter Property="MinHeight" Value="48" />
            <!-- Hauteur minimale (plus de fixe !) -->
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <!-- Centrage vertical parfait -->

            <!-- Coins arrondis + template complet -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="10"
                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                          Focusable="False"
                          HorizontalScrollBarVisibility="Hidden"
                          VerticalScrollBarVisibility="Hidden" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Effet au focus (bordure + glow vert fluo) -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#00ff88" />
                                <Setter TargetName="Bd" Property="BorderThickness" Value="3" />
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00ff88" Direction="320" ShadowDepth="0" BlurRadius="8" Opacity="0.6" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Effet au survol -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#00ff88" />
                            </Trigger>
                            <!-- Désactivé -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="AccentTabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="#0AFF99"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                    x:Name="Bd"
                    Background="#101820"
                    BorderBrush="#0AFF99"
                    BorderThickness="1"
                            CornerRadius="6,6,0,0"
                    Padding="{TemplateBinding Padding}">

                            <ContentPresenter
                        x:Name="ContentSite"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        ContentSource="Header"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#162A24"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1AFFA3"/>
                            </Trigger>

                            <!-- Sélectionné : PLUS DE BLANC -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0E3B2E"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1AFFA3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>

                            <!-- Désactivé -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#666"/>
                                <Setter TargetName="Bd" Property="Background" Value="#0B0F14"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#333"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LISTE DES STRUCTURES -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="📋 Structures" Style="{StaticResource TitleStyle}"/>

                <ListBox Grid.Row="1"
         ItemsSource="{Binding Structures}"
         SelectedItem="{Binding SelectedStructure}"
         Background="#0f3460"
         BorderThickness="0"
         Foreground="White"
         FontSize="14">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- BOUTON FAVORI -->
                                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="30" Height="30"
                        Margin="0,0,8,0"
                        Click="FavoriteButton_Click"
                        Tag="{Binding}">
                                    <TextBlock FontSize="18">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="☆"/>
                                                <Setter Property="Foreground" Value="#666"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                        <Setter Property="Text" Value="⭐"/>
                                                        <Setter Property="Foreground" Value="#ffb703"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button>

                                <!-- CONTENU EXISTANT -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" 
                              FontSize="11" 
                              Foreground="#a0a0a0"
                              TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <Button Content="➕ Nouvelle"
                           Command="{Binding NewStructureCommand}"
                           Height="40"
                           Background="#00ff88"
                           Foreground="#1a1a2e"
                           FontWeight="Bold"
                           Margin="0,5"/>

                    <Button Content="📋 Dupliquer"
                           Command="{Binding DuplicateStructureCommand}"
                           Height="35"
                           Background="#0f3460"
                           Foreground="White"
                           Margin="0,5"
                           IsEnabled="{Binding SelectedStructure, Converter={StaticResource NullToBoolConverter}}"/>

                    <Button Content="🗑️ Supprimer"
                           Command="{Binding DeleteStructureCommand}"
                           Height="35"
                           Background="#e94560"
                           Foreground="White"
                           Margin="0,5"
                           IsEnabled="{Binding SelectedStructure, Converter={StaticResource NullToBoolConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ÉDITEUR -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TABS -->
            <TabControl Grid.Row="1"
                       Background="#16213e"
                       BorderThickness="0"
                       Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibleConverter}}">

                <!-- ONGLET MANUEL -->
                <TabItem Header="✏️ ÉDITION MANUELLE" Style="{StaticResource AccentTabItemStyle}">
                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- INFOS STRUCTURE -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Nom de la structure" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding StructureName}" Style="{StaticResource TextBoxStyle}"/>

                                    <TextBlock Text="Description" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding StructureDescription}" 
                                            Style="{StaticResource TextBoxStyle}"
                                            Height="60"
                                            TextWrapping="Wrap"
                                            AcceptsReturn="True"
                                            VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>

                                <Border Grid.Column="1" 
                                       Background="#0f3460"
                                       CornerRadius="10"
                                       Padding="15"
                                       Margin="15,0,0,0">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="DURÉE TOTALE" 
                                                  FontSize="12" 
                                                  Foreground="#a0a0a0"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding TotalDuration, StringFormat='{}{0} min'}"
                                                  FontSize="32"
                                                  FontWeight="Bold"
                                                  Foreground="#00ff88"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,5"/>
                                        <TextBlock FontSize="16"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center">
                                            <Run Text="{Binding TotalDuration, Converter={StaticResource MinutesToHoursConverter}}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- DATAGRID NIVEAUX -->
                            <DataGrid Grid.Row="1"
         ItemsSource="{Binding CurrentLevels}"
         Style="{StaticResource DataGridStyle}"
         Margin="0,15">

                                <!-- Style pour les en-têtes de colonnes -->
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#0f3460" />
                                        <Setter Property="Foreground" Value="#00ff88" />
                                        <Setter Property="Height" Value="35" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Padding" Value="10,5" />
                                        <Setter Property="FontSize" Value="14" />
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" Binding="{Binding LevelNumber}" Width="50" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="SB" Binding="{Binding SmallBlind}" Width="100"/>
                                    <DataGridTextColumn Header="BB" Binding="{Binding BigBlind}" Width="100"/>
                                    <DataGridTextColumn Header="Ante" Binding="{Binding Ante}" Width="100"/>
                                    <DataGridTextColumn Header="Durée (min)" Binding="{Binding DurationMinutes}" Width="120"/>
                                    <DataGridCheckBoxColumn Header="Pause?" Binding="{Binding IsBreak}" Width="80"/>
                                    <DataGridTextColumn Header="Nom pause" Binding="{Binding BreakName}" Width="*"/>
                                    <DataGridTemplateColumn Header="Action" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="🗑️"
                           Command="{Binding DataContext.RemoveLevelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                           CommandParameter="{Binding}"
                           Background="#e94560"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="5"
                           Cursor="Hand"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- BOUTONS ACTIONS -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <Button Content="➕ Niveau"
                                       Command="{Binding AddLevelCommand}"
                                       Width="150" Height="45"
                                       Background="#00ff88"
                                       Foreground="#1a1a2e"
                                       FontWeight="Bold"
                                       Margin="0,0,10,0"/>

                                <Button Content="☕ Pause"
                                       Command="{Binding AddBreakCommand}"
                                       Width="150" Height="45"
                                       Background="#ffd700"
                                       Foreground="#1a1a2e"
                                       FontWeight="Bold"
                                       Margin="0,0,10,0"/>

                                <Button Content="💾 SAUVEGARDER"
                                       Command="{Binding SaveStructureCommand}"
                                       Width="180" Height="45"
                                       Background="#0f3460"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="20,0,10,0"/>

                                <Button Content="❌ Annuler"
                                       Command="{Binding CancelEditCommand}"
                                       Width="120" Height="45"
                                       Background="#e94560"
                                       Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- ONGLET GÉNÉRATION AUTO -->
                <TabItem Header="🤖 GÉNÉRATION AUTOMATIQUE" Style="{StaticResource AccentTabItemStyle}">
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="🤖 Générateur automatique de structure" 
                                      Style="{StaticResource TitleStyle}"
                                      FontSize="24"
                                      Foreground="#00ff88"
                                      Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- COLONNE 1 -->
                                <StackPanel Grid.Column="0" Margin="0,0,20,0">
    <TextBlock Text="Durée cible du tournoi (minutes)" Style="{StaticResource LabelStyle}"/>
    <StackPanel Orientation="Horizontal">
        <TextBox Text="{Binding AutoTargetDuration}"
                 Style="{StaticResource TextBoxStyle}"
                 Width="150"/>
        <TextBlock VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   Foreground="#a0a0a0">
            <Run Text="≈"/>
            <Run Text="{Binding AutoTargetDuration, Converter={StaticResource MinutesToHoursConverter}}"/>
        </TextBlock>
    </StackPanel>

    <TextBlock Text="Blinds de départ" Style="{StaticResource LabelStyle}" Margin="0,12,0,0"/>

    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Text="SB" Style="{StaticResource LabelStyle}" FontSize="11" Margin="0,0,0,2"/>
            <TextBox Text="{Binding AutoStartingBlind, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource TextBoxStyle}"
                     Width="90"
                     HorizontalAlignment="Left"/>
        </StackPanel>

        <TextBlock Text="/"
                   VerticalAlignment="Center"
                   Margin="8,0"
                   FontSize="16"
                   Foreground="#a0a0a0"/>

        <StackPanel>
            <TextBlock Text="BB" Style="{StaticResource LabelStyle}" FontSize="11" Margin="0,0,0,2"/>
            <TextBox Text="{Binding AutoStartingBlind, Converter={StaticResource MultiplyBy2Converter}, Mode=OneWay}"
                     Style="{StaticResource TextBoxStyle}"
                     Width="90"
                     IsReadOnly="True"
                     Background="#0f3460"
                     Foreground="#00ff88"/>
        </StackPanel>
    </StackPanel>

    <!-- Info Stack ≈ xx BB (avec MultiBinding) -->
    <TextBlock Foreground="#a0a0a0"
               FontSize="12"
               Margin="0,8,0,15"
               TextWrapping="Wrap">
        <TextBlock.Text>
            <MultiBinding Converter="{StaticResource StartingStackToBBConverter}">
                <Binding Path="AutoStartingStack" Mode="OneWay" />
                <Binding Path="AutoStartingBlind"  Mode="OneWay" />
            </MultiBinding>
        </TextBlock.Text>
    </TextBlock>

    <TextBlock Text="Durée de chaque niveau (minutes)" Style="{StaticResource LabelStyle}"/>
    <TextBox Text="{Binding AutoLevelDuration}" 
             Style="{StaticResource TextBoxStyle}" 
             Width="100" 
             HorizontalAlignment="Left"/>

    <CheckBox Content="Avec antes"
              IsChecked="{Binding AutoWithAnte}"
              Foreground="White"
              FontSize="14"
              Margin="0,15"/>
</StackPanel>

                                <!-- COLONNE 2 -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Nombre de pauses" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding AutoNumberOfBreaks}" Style="{StaticResource TextBoxStyle}" Width="100" HorizontalAlignment="Left"/>

                                    <TextBlock Text="Durée des pauses (minutes)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding AutoBreakDuration}" Style="{StaticResource TextBoxStyle}" Width="100" HorizontalAlignment="Left"/>

                                    <Border Background="#0f3460"
                                           CornerRadius="10"
                                           Padding="15"
                                           Margin="0,20,0,0">
                                        <StackPanel>
                                            <TextBlock Text="ℹ️ Comment ça marche ?" 
                                                      FontWeight="Bold"
                                                      Foreground="#00ff88"
                                                      Margin="0,0,0,10"/>
                                            <TextBlock Text="• La BB sera toujours le double de la SB"
                                                      Foreground="#a0a0a0"
                                                      FontSize="12"
                                                      TextWrapping="Wrap"
                                                      Margin="0,3"/>
                                            <TextBlock Text="• Les blinds progressent intelligemment"
                                                      Foreground="#a0a0a0"
                                                      FontSize="12"
                                                      TextWrapping="Wrap"
                                                      Margin="0,3"/>
                                            <TextBlock Text="• Les pauses sont réparties équitablement"
                                                      Foreground="#a0a0a0"
                                                      FontSize="12"
                                                      TextWrapping="Wrap"
                                                      Margin="0,3"/>
                                            <TextBlock Text="• L'ante vaudra environ SB/2 si activé"
                                                      Foreground="#a0a0a0"
                                                      FontSize="12"
                                                      TextWrapping="Wrap"
                                                      Margin="0,3"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- COLONNE 3 -->
                                <StackPanel Grid.Column="1" Margin="0,0,20,0">


                                    <TextBlock Text="Jetons par stack de départ" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding AutoStartingStack}" Style="{StaticResource TextBoxStyle}" Width="100" HorizontalAlignment="Left"/>

                                    <TextBlock Text="Estimation nombre de joueurs" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding AutoAveragePlayers}" Style="{StaticResource TextBoxStyle}" Width="100" HorizontalAlignment="Left"/>

                                </StackPanel>
                            </Grid>

                            <Button Content="✨ GÉNÉRER LA STRUCTURE"
                                   Command="{Binding GenerateAutoCommand}"
                                   Width="350" Height="60"
                                   Background="#00ff88"
                                   Foreground="#1a1a2e"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,30,0,0"
                                   HorizontalAlignment="Center"/>

                            <TextBlock Text="La structure générée apparaîtra dans l'onglet 'Édition manuelle' où vous pourrez la modifier et l'enregistrer."
                                      Foreground="#a0a0a0"
                                      FontSize="13"
                                      TextWrapping="Wrap"
                                      TextAlignment="Center"
                                      Margin="50,15,50,0"/>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>

            <!-- MESSAGE SI PAS D'ÉDITION -->
            <Border Grid.Row="1" 
                   Style="{StaticResource CardStyle}"
                   Visibility="{Binding IsEditing, Converter={StaticResource BoolToCollapsedConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="📊" FontSize="100" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    <TextBlock Text="Sélectionnez une structure à modifier" 
                              FontSize="20" 
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="ou créez-en une nouvelle" 
                              FontSize="16" 
                              Foreground="#a0a0a0"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>