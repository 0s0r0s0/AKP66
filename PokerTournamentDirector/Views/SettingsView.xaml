<Window x:Class="PokerTournamentDirector.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="⚙️ Paramètres" 
        Height="850" Width="1000"
        Background="#1a1a2e"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#00ff88"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#a0a0a0"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="TransparentIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#00ff88"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0f3460"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#16213e"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Grid.Row="0" 
                  Text="⚙️ PARAMÈTRES DE L'APPLICATION" 
                  FontSize="28" 
                  FontWeight="Bold" 
                  Foreground="White"
                  Margin="0,0,0,20"/>

        <!-- CONTENU -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- PARAMÈTRES ADMINISTRATIFS -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📋 Paramètres Administratifs" Style="{StaticResource SectionTitleStyle}"/>

                        <!-- REMPLACE cette section COMPLÈTE dans SettingsView.xaml -->
                        <!-- EXERCICE -->
                        <TextBlock Text="📅 Exercice Annuel" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,10,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Début de saison" Style="{StaticResource LabelStyle}"/>
                                <DatePicker SelectedDate="{Binding FiscalYearStartDate, Mode=TwoWay}" 
                    Height="40" 
                    FontSize="14"
                    FirstDayOfWeek="Monday"
                    SelectedDateFormat="Short">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" Value="#0f3460"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                                <TextBlock Text="Ex: 01/09 pour 1er septembre" Foreground="#666" FontSize="11" Margin="0,3,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Fin de saison" Style="{StaticResource LabelStyle}"/>
                                <DatePicker SelectedDate="{Binding FiscalYearEndDate, Mode=TwoWay}" 
                    Height="40" 
                    FontSize="14"
                    FirstDayOfWeek="Monday"
                    SelectedDateFormat="Short">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" Value="#0f3460"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                                <TextBlock Text="Ex: 30/06 pour 30 juin" Foreground="#666" FontSize="11" Margin="0,3,0,0"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Jour administratif" Style="{StaticResource LabelStyle}"/>
                        <ComboBox SelectedIndex="{Binding AdministrativeDay}" Style="{StaticResource ComboBoxStyle}">
                            <ComboBoxItem Content="Dimanche"/>
                            <ComboBoxItem Content="Lundi"/>
                            <ComboBoxItem Content="Mardi"/>
                            <ComboBoxItem Content="Mercredi"/>
                            <ComboBoxItem Content="Jeudi"/>
                            <ComboBoxItem Content="Vendredi"/>
                            <ComboBoxItem Content="Samedi"/>
                        </ComboBox>
                        <TextBlock Text="Les paiements seront alignés sur ce jour de la semaine" Foreground="#666" FontSize="11" Margin="0,3,0,0"/>

                        <!-- COTISATION -->
                        <TextBlock Text="💰 Cotisation" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,20,0,10"/>

                        <TextBlock Text="Montant cotisation annuelle (€)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding AnnualFee}" Style="{StaticResource TextBoxStyle}" Width="150" HorizontalAlignment="Left"/>

                        <TextBlock Text="Période d'essai (semaines)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding TrialPeriodWeeks}" Style="{StaticResource TextBoxStyle}" Width="150" HorizontalAlignment="Left"/>

                        <TextBlock Text="Options de paiement échelonné" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding InstallmentOptions}" Style="{StaticResource TextBoxStyle}" Width="200" HorizontalAlignment="Left"/>
                        <TextBlock Text="Séparées par virgule (ex: 2,3,4,6,10)" Foreground="#666" FontSize="11" Margin="0,3,0,0"/>

                        <!-- PRORATA -->
                        <TextBlock Text="📊 Prorata inscription tardive" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,20,0,10"/>

                        <CheckBox Content="Activer le prorata pour inscriptions tardives" 
                                 IsChecked="{Binding EnableProrata}"
                                 Foreground="White" FontSize="14" Margin="0,5,0,10"/>

                        <TextBlock Text="Mode de calcul prorata" Style="{StaticResource LabelStyle}"/>
                        <ComboBox SelectedIndex="{Binding ProrataMode, Converter={StaticResource ProrataModeToIndexConverter}}" 
                                 Style="{StaticResource ComboBoxStyle}">
                            <ComboBoxItem Content="Mensuel" Tag="monthly"/>
                            <ComboBoxItem Content="Pourcentage proportionnel" Tag="percentage"/>
                        </ComboBox>
                        <TextBlock Text="Mensuel : calcul par mois restants • Pourcentage : jours restants / jours total" 
                                  Foreground="#666" FontSize="11" Margin="0,3,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- PARAMÈTRES GÉNÉRAUX -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🔧 Paramètres Généraux des Tournois" Style="{StaticResource SectionTitleStyle}"/>

                        <TextBlock Text="Durée par défaut des niveaux (minutes)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding DefaultLevelDuration}" Style="{StaticResource TextBoxStyle}" Width="100" HorizontalAlignment="Left"/>

                        <TextBlock Text="Durée par défaut des pauses (minutes)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding DefaultBreakDuration}" Style="{StaticResource TextBoxStyle}" Width="100" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- THÈME COULEURS -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="🎨 Thème de Couleurs" Style="{StaticResource SectionTitleStyle}"/>

                            <TextBlock Text="Fond principal" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <xctk:ColorPicker Grid.Column="0" 
                                                 SelectedColor="{Binding BackgroundBrush.Color, Mode=TwoWay}"
                                                 ColorMode="ColorCanvas"
                                                 ShowStandardColors="True"
                                                 Height="40"
                                                 Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding BackgroundColor}" 
                                        Style="{StaticResource TextBoxStyle}" Width="100"/>
                            </Grid>

                            <TextBlock Text="Cartes / Panneaux" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <xctk:ColorPicker Grid.Column="0" 
                                                 SelectedColor="{Binding CardBrush.Color, Mode=TwoWay}"
                                                 ColorMode="ColorCanvas"
                                                 ShowStandardColors="True"
                                                 Height="40"
                                                 Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding CardColor}" 
                                        Style="{StaticResource TextBoxStyle}" Width="100"/>
                            </Grid>

                            <TextBlock Text="Couleur d'accent (vert néon)" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <xctk:ColorPicker Grid.Column="0" 
                                                 SelectedColor="{Binding AccentBrush.Color, Mode=TwoWay}"
                                                 ColorMode="ColorCanvas"
                                                 ShowStandardColors="True"
                                                 Height="40"
                                                 Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding AccentColor}" 
                                        Style="{StaticResource TextBoxStyle}" Width="100"/>
                            </Grid>

                            <TextBlock Text="Avertissement (jaune)" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <xctk:ColorPicker Grid.Column="0" 
                                                 SelectedColor="{Binding WarningColor, Converter={StaticResource HexToColorConverter}, Mode=TwoWay}"
                                                 ColorMode="ColorCanvas"
                                                 ShowStandardColors="True"
                                                 Height="40"
                                                 Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding WarningColor}" 
                                        Style="{StaticResource TextBoxStyle}" Width="100"/>
                            </Grid>

                            <TextBlock Text="Danger (rouge)" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <xctk:ColorPicker Grid.Column="0" 
                                                 SelectedColor="{Binding DangerColor, Converter={StaticResource HexToColorConverter}, Mode=TwoWay}"
                                                 ColorMode="ColorCanvas"
                                                 ShowStandardColors="True"
                                                 Height="40"
                                                 Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding DangerColor}" 
                                        Style="{StaticResource TextBoxStyle}" Width="100"/>
                            </Grid>
                        </StackPanel>

                        <!-- APERÇU -->
                        <Border Grid.Column="1" 
                               Background="{Binding BackgroundBrush}"
                               CornerRadius="10"
                               Padding="20"
                               Margin="20,0,0,0">
                            <StackPanel>
                                <TextBlock Text="APERÇU" 
                                          FontSize="14" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,15"/>

                                <Border Background="{Binding CardBrush}"
                                       CornerRadius="10"
                                       Padding="15"
                                       Margin="0,5">
                                    <StackPanel>
                                        <TextBlock Text="Carte / Panneau" 
                                                  Foreground="White"
                                                  FontSize="14"/>
                                        <TextBlock Text="Texte normal sur carte" 
                                                  Foreground="#a0a0a0"
                                                  FontSize="12"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="{Binding AccentBrush}"
                                       CornerRadius="10"
                                       Padding="15"
                                       Margin="0,5">
                                    <TextBlock Text="Bouton Accent" 
                                              Foreground="#1a1a2e"
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"/>
                                </Border>

                                <TextBlock Text="Format hex: #RRGGBB" 
                                          FontSize="11" 
                                          Foreground="#666"
                                          HorizontalAlignment="Center"
                                          Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- PARAMÈTRES SONS -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🔊 Sons et Alertes" Style="{StaticResource SectionTitleStyle}"/>

                        <CheckBox Content="Activer tous les sons"
                  IsChecked="{Binding EnableSounds}"
                  Foreground="White"
                  FontSize="16"
                  FontWeight="Bold"
                  Margin="0,5,0,15"/>

                        <StackPanel Margin="20,0,0,0" IsEnabled="{Binding EnableSounds}">

                            <!-- Son pause / reprise -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Son pause / reprise"
                          IsChecked="{Binding SoundOnPauseResume}"
                          Foreground="White"
                          FontSize="14"
                          VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
                        Content="🔊"
                        Width="32" Height="32"
                        Margin="10,0,0,0"
                        Style="{StaticResource TransparentIconButton}"  
                                    Command="{Binding PlaySoundCommand}"
                        CommandParameter="pause.mp3"/>
                            </Grid>

                            <!-- Son à 60 secondes -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Son à 60 secondes"
                          IsChecked="{Binding SoundOn60Seconds}"
                          Foreground="White"
                          FontSize="14"
                          VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
                        Content="🔊"
                        Width="32" Height="32"
                        Margin="10,0,0,0"
                        Style="{StaticResource TransparentIconButton}"
                        Command="{Binding PlaySoundCommand}"
                        CommandParameter="60s.mp3"/>
                            </Grid>

                            <!-- Son à 10 secondes -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Son à 10 secondes"
                          IsChecked="{Binding SoundOn10Seconds}"
                          Foreground="White"
                          FontSize="14"
                          VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
                        Content="🔊"
                        Width="32" Height="32"
                        Margin="10,0,0,0"
                        Style="{StaticResource TransparentIconButton}"
                        Command="{Binding PlaySoundCommand}"
                        CommandParameter="10s.mp3"/>
                            </Grid>

                            <!-- Compte à rebours (3, 2, 1) -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Compte à rebours (3, 2, 1)"
                          IsChecked="{Binding SoundOnCountdown}"
                          Foreground="White"
                          FontSize="14"
                          VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
                        Content="🔊"
                        Width="32" Height="32"
                        Margin="10,0,0,0"
                        Style="{StaticResource TransparentIconButton}"
                        Command="{Binding PlaySoundCommand}"
                        CommandParameter="countdown.mp3"/>
                            </Grid>
                            <!-- Début de tournoi -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Début de tournoi"
  IsChecked="{Binding SoundOnStart}"
  Foreground="White"
  FontSize="14"
  VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
Content="🔊"
Width="32" Height="32"
Margin="10,0,0,0"
Style="{StaticResource TransparentIconButton}"
Command="{Binding PlaySoundCommand}"
CommandParameter="start.mp3"/>
                            </Grid>
                            <!-- Son niveau de pause -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Son niveau de pause"
  IsChecked="{Binding SoundOnBreak}"
  Foreground="White"
  FontSize="14"
  VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
Content="🔊"
Width="32" Height="32"
Margin="10,0,0,0"
Style="{StaticResource TransparentIconButton}"
Command="{Binding PlaySoundCommand}"
CommandParameter="break.mp3"/>
                            </Grid>
                            <!-- Son victoire -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Son après une victoire"
  IsChecked="{Binding SoundOnWin}"
  Foreground="White"
  FontSize="14"
  VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
Content="🔊"
Width="32" Height="32"
Margin="10,0,0,0"
Style="{StaticResource TransparentIconButton}"
Command="{Binding PlaySoundCommand}"
CommandParameter="bravo.mp3"/>
                            </Grid>
                            <!-- Son Kill -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Son à l'éminitation d'un joueur"
  IsChecked="{Binding SoundOnKill}"
  Foreground="White"
  FontSize="14"
  VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
Content="🔊"
Width="32" Height="32"
Margin="10,0,0,0"
Style="{StaticResource TransparentIconButton}"
Command="{Binding PlaySoundCommand}"
CommandParameter="kill.mp3"/>
                            </Grid>
                            <!-- Annulation élimination -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Annulation élimination"
  IsChecked="{Binding SoundOnUndoKill}"
  Foreground="White"
  FontSize="14"
  VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
Content="🔊"
Width="32" Height="32"
Margin="10,0,0,0"
Style="{StaticResource TransparentIconButton}"
Command="{Binding PlaySoundCommand}"
CommandParameter="undo.mp3"/>
                            </Grid>
                            <!-- Son recave -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Recave"
  IsChecked="{Binding SoundOnRebuy}"
  Foreground="White"
  FontSize="14"
  VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
Content="🔊"
Width="32" Height="32"
Margin="10,0,0,0"
Style="{StaticResource TransparentIconButton}"
Command="{Binding PlaySoundCommand}"
CommandParameter="rebuy.mp3"/>
                            </Grid>

                            <!-- Son changement de niveau -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Content="Son changement de niveau"
                          IsChecked="{Binding SoundOnLevelChange}"
                          Foreground="White"
                          FontSize="14"
                          VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
                        Content="🔊"
                        Width="32" Height="32"
                        Margin="10,0,0,0"
                        Style="{StaticResource TransparentIconButton}"
                        Command="{Binding PlaySoundCommand}"
                        CommandParameter="level.mp3"/>
                            </Grid>

                        </StackPanel>

                        <Button Content="🔊 Tester le son"
                Command="{Binding TestSoundCommand}"
                Height="40"
                Width="150"
                HorizontalAlignment="Left"
                Background="#0f3460"
                Foreground="White"
                FontSize="14"
                Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="#16213e" CornerRadius="15" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="📧 CONFIGURATION EMAIL (SMTP)" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#00ff88" 
                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Colonne 1 -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Serveur SMTP" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding SmtpServer}" Style="{StaticResource TextBoxStyle}"/>

                                <TextBlock Text="Port" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding SmtpPort}" Style="{StaticResource TextBoxStyle}"/>

                                <CheckBox Content="Activer SSL/TLS" 
                          IsChecked="{Binding SmtpEnableSsl}" 
                          Foreground="White" 
                          Margin="0,15,0,0"/>
                            </StackPanel>

                            <!-- Colonne 2 -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Email d'envoi" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding SmtpFromEmail}" Style="{StaticResource TextBoxStyle}"/>

                                <TextBlock Text="Nom d'utilisateur SMTP" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding SmtpUsername}" Style="{StaticResource TextBoxStyle}"/>

                                <TextBlock Text="Mot de passe d'application" Style="{StaticResource LabelStyle}"/>
                                <PasswordBox x:Name="SmtpPasswordBox" 
                             Height="40" 
                             Padding="10" 
                             FontSize="14"
                             PasswordChanged="SmtpPasswordBox_PasswordChanged"/>
                            </StackPanel>
                        </Grid>

                        <!-- Bouton test -->
                        <Button Content="🧪 Tester la connexion" 
                Command="{Binding TestEmailConnectionCommand}"
                Width="200" 
                Height="45" 
                Background="#ffd700" 
                Foreground="#1a1a2e" 
                FontWeight="Bold" 
                Margin="0,20,0,0" 
                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

            </StackPanel>
      

        </ScrollViewer>

        <!-- BOUTONS ACTION -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="💾 SAUVEGARDER"
                   Command="{Binding SaveSettingsCommand}"
                   Width="200" Height="55"
                   Background="#00ff88"
                   Foreground="#1a1a2e"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="10,0"/>

            <Button Content="🔄 RÉINITIALISER"
                   Command="{Binding ResetToDefaultsCommand}"
                   Width="200" Height="55"
                   Background="#e94560"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="10,0"/>

            <Button Content="✅ FERMER"
                   Click="Close_Click"
                   Width="150" Height="55"
                   Background="#0f3460"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>