<Window x:Class="PokerTournamentDirector.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="⚙️ Paramètres" 
        Height="750" Width="950"
        Background="#1a1a2e"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#00ff88"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#a0a0a0"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#00ff88"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Grid.Row="0" 
                  Text="⚙️ PARAMÈTRES DE L'APPLICATION" 
                  FontSize="28" 
                  FontWeight="Bold" 
                  Foreground="White"
                  Margin="0,0,0,20"/>

        <!-- CONTENU -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- THÈME COULEURS -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="🎨 Thème de couleurs" Style="{StaticResource SectionTitleStyle}"/>

                            <TextBlock Text="Fond principal" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <xctk:ColorPicker Grid.Column="0" 
                                                 SelectedColor="{Binding BackgroundBrush.Color, Mode=TwoWay}"
                                                 ColorMode="ColorCanvas"
                                                 ShowStandardColors="True"
                                                 Height="40"
                                                 Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding BackgroundColor}" 
                                        Style="{StaticResource TextBoxStyle}" Width="100"/>
                            </Grid>

                            <TextBlock Text="Cartes / Panneaux" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <xctk:ColorPicker Grid.Column="0" 
                                                 SelectedColor="{Binding CardBrush.Color, Mode=TwoWay}"
                                                 ColorMode="ColorCanvas"
                                                 ShowStandardColors="True"
                                                 Height="40"
                                                 Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding CardColor}" 
                                        Style="{StaticResource TextBoxStyle}" Width="100"/>
                            </Grid>

                            <TextBlock Text="Couleur d'accent (vert néon)" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <xctk:ColorPicker Grid.Column="0" 
                                                 SelectedColor="{Binding AccentBrush.Color, Mode=TwoWay}"
                                                 ColorMode="ColorCanvas"
                                                 ShowStandardColors="True"
                                                 Height="40"
                                                 Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding AccentColor}" 
                                        Style="{StaticResource TextBoxStyle}" Width="100"/>
                            </Grid>

                            <TextBlock Text="Avertissement (jaune)" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <xctk:ColorPicker Grid.Column="0" 
                                                 SelectedColor="{Binding WarningColor, Converter={StaticResource HexToColorConverter}, Mode=TwoWay}"
                                                 ColorMode="ColorCanvas"
                                                 ShowStandardColors="True"
                                                 Height="40"
                                                 Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding WarningColor}" 
                                        Style="{StaticResource TextBoxStyle}" Width="100"/>
                            </Grid>

                            <TextBlock Text="Danger (rouge)" Style="{StaticResource LabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <xctk:ColorPicker Grid.Column="0" 
                                                 SelectedColor="{Binding DangerColor, Converter={StaticResource HexToColorConverter}, Mode=TwoWay}"
                                                 ColorMode="ColorCanvas"
                                                 ShowStandardColors="True"
                                                 Height="40"
                                                 Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding DangerColor}" 
                                        Style="{StaticResource TextBoxStyle}" Width="100"/>
                            </Grid>

                            <Button Content="🎨 RESET COULEURS UNIQUEMENT"
                                   Command="{Binding ResetColorsOnlyCommand}"
                                   Height="40"
                                   Background="#0f3460"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="0,15,0,0"/>
                        </StackPanel>

                        <!-- APERÇU -->
                        <Border Grid.Column="1" 
                               Background="{Binding BackgroundBrush}"
                               CornerRadius="10"
                               Padding="20"
                               Margin="20,0,0,0">
                            <StackPanel>
                                <TextBlock Text="APERÇU" 
                                          FontSize="14" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,15"/>

                                <Border Background="{Binding CardBrush}"
                                       CornerRadius="10"
                                       Padding="15"
                                       Margin="0,5">
                                    <StackPanel>
                                        <TextBlock Text="Carte / Panneau" 
                                                  Foreground="White"
                                                  FontSize="14"/>
                                        <TextBlock Text="Texte normal sur carte" 
                                                  Foreground="#a0a0a0"
                                                  FontSize="12"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="{Binding AccentBrush}"
                                       CornerRadius="10"
                                       Padding="15"
                                       Margin="0,5">
                                    <TextBlock Text="Bouton Accent" 
                                              Foreground="#1a1a2e"
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"/>
                                </Border>

                                <TextBlock Text="Format hex: #RRGGBB" 
                                          FontSize="11" 
                                          Foreground="#666"
                                          HorizontalAlignment="Center"
                                          Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- PARAMÈTRES SONS -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🔊 Sons et alertes" Style="{StaticResource SectionTitleStyle}"/>

                        <CheckBox Content="Activer tous les sons"
                                 IsChecked="{Binding EnableSounds}"
                                 Foreground="White"
                                 FontSize="16"
                                 FontWeight="Bold"
                                 Margin="0,5,0,15"/>

                        <StackPanel Margin="20,0,0,0" IsEnabled="{Binding EnableSounds}">
                            <CheckBox Content="Son pause / reprise"
                                     IsChecked="{Binding SoundOnPauseResume}"
                                     Foreground="White"
                                     FontSize="14"
                                     Margin="0,8"/>

                            <CheckBox Content="Son à 60 secondes"
                                     IsChecked="{Binding SoundOn60Seconds}"
                                     Foreground="White"
                                     FontSize="14"
                                     Margin="0,8"/>

                            <CheckBox Content="Son à 10 secondes"
                                     IsChecked="{Binding SoundOn10Seconds}"
                                     Foreground="White"
                                     FontSize="14"
                                     Margin="0,8"/>

                            <CheckBox Content="Compte à rebours (3, 2, 1)"
                                     IsChecked="{Binding SoundOnCountdown}"
                                     Foreground="White"
                                     FontSize="14"
                                     Margin="0,8"/>

                            <CheckBox Content="Son changement de niveau"
                                     IsChecked="{Binding SoundOnLevelChange}"
                                     Foreground="White"
                                     FontSize="14"
                                     Margin="0,8"/>
                        </StackPanel>

                        <Button Content="🔊 Tester le son"
                               Command="{Binding TestSoundCommand}"
                               Height="40"
                               Width="150"
                               HorizontalAlignment="Left"
                               Background="#0f3460"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>

                <!-- PARAMÈTRES GÉNÉRAUX -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🔧 Paramètres généraux" Style="{StaticResource SectionTitleStyle}"/>

                        <TextBlock Text="Durée par défaut des niveaux (minutes)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding DefaultLevelDuration}" Style="{StaticResource TextBoxStyle}" Width="100" HorizontalAlignment="Left"/>

                        <TextBlock Text="Durée par défaut des pauses (minutes)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding DefaultBreakDuration}" Style="{StaticResource TextBoxStyle}" Width="100" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- BOUTONS ACTION -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="💾 SAUVEGARDER"
                   Command="{Binding SaveSettingsCommand}"
                   Width="200" Height="55"
                   Background="#00ff88"
                   Foreground="#1a1a2e"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="10,0"/>

            <Button Content="🔄 RÉINITIALISER"
                   Command="{Binding ResetToDefaultsCommand}"
                   Width="200" Height="55"
                   Background="#e94560"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="10,0"/>

            <Button Content="✅ FERMER"
                   Click="Close_Click"
                   Width="150" Height="55"
                   Background="#0f3460"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>