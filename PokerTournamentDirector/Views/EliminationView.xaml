<Window x:Class="PokerTournamentDirector.Views.EliminationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ’€ Ã‰liminations &amp; Recaves" 
        Height="800" Width="1200"
        Background="#1a1a2e"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ListBoxPlayerStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#00ff88"/>
                    <Setter Property="Foreground" Value="#1a1a2e"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a2332"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- STATS BAR -->
        <Border Grid.Row="0" Background="#0f3460" CornerRadius="15" Padding="20" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="JOUEURS RESTANTS" FontSize="14" Foreground="#a0a0a0" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding PlayersRemaining}" FontSize="42" FontWeight="Bold" Foreground="#00ff88" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Ã‰LIMINATIONS" FontSize="14" Foreground="#a0a0a0" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalEliminations}" FontSize="42" FontWeight="Bold" Foreground="#e94560" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="PRIZE POOL" FontSize="14" Foreground="#a0a0a0" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentPrizePool, StringFormat='{}{0:N0} â‚¬'}" FontSize="42" FontWeight="Bold" Foreground="#ffd700" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENU PRINCIPAL -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>

            <!-- JOUEUR Ã‰LIMINÃ‰ -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ðŸ’€ Joueur Ã©liminÃ©" Style="{StaticResource TitleStyle}"/>

                    <ListBox Grid.Row="1"
                            ItemsSource="{Binding ActivePlayers}"
                            SelectedItem="{Binding SelectedEliminatedPlayer}"
                            Style="{StaticResource ListBoxPlayerStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Player.Name}" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Text="{Binding Player.Nickname, StringFormat='@{0}'}" 
                                                  FontSize="12" 
                                                  Foreground="#a0a0a0"
                                                  Visibility="{Binding Player.Nickname, Converter={StaticResource NullToCollapsedConverter}}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding CurrentStack, StringFormat='{}{0:N0}'}" 
                                                  FontSize="14" 
                                                  FontWeight="Bold"
                                                  Foreground="#00ff88"/>
                                        <TextBlock Text="{Binding RebuyCount, StringFormat='ðŸ”„ {0}'}" 
                                                  FontSize="11" 
                                                  Foreground="#ffd700"
                                                  HorizontalAlignment="Right"
                                                  Visibility="{Binding RebuyCount, Converter={StaticResource ZeroToCollapsedConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- KILLER (optionnel) - Liste filtrÃ©e pour exclure le joueur sÃ©lectionnÃ© -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="ðŸŽ¯ Ã‰liminÃ© par (optionnel)" Style="{StaticResource TitleStyle}"/>
                        <TextBlock Text="âš ï¸ Un joueur ne peut pas s'Ã©liminer lui-mÃªme" 
                                  FontSize="12" 
                                  Foreground="#ffd700" 
                                  FontStyle="Italic"
                                  Margin="0,-10,0,10"/>
                    </StackPanel>

                    <!-- Utiliser AvailableKillers au lieu de ActivePlayers -->
                    <ListBox Grid.Row="1"
                            ItemsSource="{Binding AvailableKillers}"
                            SelectedItem="{Binding SelectedKillerPlayer}"
                            Style="{StaticResource ListBoxPlayerStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Player.Name}" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="{Binding BountyKills, StringFormat='ðŸ’€ {0}'}" 
                                              FontSize="14" 
                                              FontWeight="Bold"
                                              Foreground="#e94560"
                                              Visibility="{Binding BountyKills, Converter={StaticResource ZeroToCollapsedConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="2"
                           Content="âŒ Aucun killer"
                           Command="{Binding ClearSelectionCommand}"
                           Height="40"
                           Background="#e94560"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,10,0,0"/>
                </Grid>
            </Border>

            <!-- ACTIONS & HISTORIQUE -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- TITRE -->
                    <TextBlock Grid.Row="0" Text="âš¡ Actions" Style="{StaticResource TitleStyle}"/>

                    <!-- BOUTON Ã‰LIMINER -->
                    <Button Grid.Row="1"
                           Content="ðŸ’€ Ã‰LIMINER LE JOUEUR"
                           Command="{Binding EliminatePlayerCommand}"
                           Height="60"
                           Background="#e94560"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,15"
                           IsEnabled="{Binding SelectedEliminatedPlayer, Converter={StaticResource NullToBoolConverter}}"/>

                    <!-- SECTION RECAVE -->
                    <Border Grid.Row="2" 
                           Background="#0f3460" 
                           CornerRadius="10" 
                           Padding="15"
                           Margin="0,0,0,15"
                           Visibility="{Binding ShowRebuySection, Converter={StaticResource BoolToVisibleConverter}}">
                        <StackPanel>
                            <TextBlock Text="ðŸ”„ RECAVE" 
                                      FontSize="18" 
                                      FontWeight="Bold" 
                                      Foreground="#ffd700"
                                      Margin="0,0,0,10"/>

                            <TextBlock Text="{Binding RebuyMessage}"
                                      FontSize="14"
                                      TextWrapping="Wrap"
                                      Foreground="White"
                                      Margin="0,0,0,15"/>

                            <Button Content="{Binding RebuyAmount, StringFormat='ðŸ”„ RECAVER ({0:C})'}"
                                   Command="{Binding RebuyPlayerCommand}"
                                   Height="50"
                                   Background="#00ff88"
                                   Foreground="#1a1a2e"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   IsEnabled="{Binding CanRebuy}"
                                   Visibility="{Binding SelectedEliminatedPlayer, Converter={StaticResource NullToBoolConverter}, FallbackValue=Collapsed}"/>

                            <TextBlock Text="{Binding RebuyCount, StringFormat='Recaves effectuÃ©es : {0}'}"
                                      FontSize="12"
                                      Foreground="#a0a0a0"
                                      Margin="0,10,0,0"
                                      HorizontalAlignment="Center"
                                      Visibility="{Binding SelectedEliminatedPlayer, Converter={StaticResource NullToBoolConverter}, FallbackValue=Collapsed}"/>
                        </StackPanel>
                    </Border>

                    <!-- HISTORIQUE -->
                    <Border Grid.Row="3" 
                           Background="#0f3460" 
                           CornerRadius="10" 
                           Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                      Text="ðŸ“œ Historique (derniÃ¨res Ã©liminations)" 
                                      FontSize="14" 
                                      FontWeight="Bold"
                                      Foreground="#a0a0a0"
                                      Margin="0,0,0,10"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding EliminationHistory}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#1a1a2e" 
                                                   CornerRadius="8" 
                                                   Padding="10" 
                                                   Margin="0,5">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Position, StringFormat='#{0}'}" 
                                                                  FontWeight="Bold" 
                                                                  Foreground="#ffd700"
                                                                  FontSize="14"
                                                                  Margin="0,0,10,0"/>
                                                        <TextBlock Text="{Binding PlayerName}" 
                                                                  FontWeight="Bold"
                                                                  Foreground="White"
                                                                  FontSize="14"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBlock Text="ðŸŽ¯ " 
                                                                  FontSize="11" 
                                                                  Foreground="#a0a0a0"/>
                                                        <TextBlock Text="{Binding KillerName}" 
                                                                  FontSize="11" 
                                                                  Foreground="#a0a0a0"
                                                                  Margin="0,0,10,0"/>
                                                        <TextBlock Text="â° " 
                                                                  FontSize="11" 
                                                                  Foreground="#a0a0a0"/>
                                                        <TextBlock Text="{Binding TimeFormatted}" 
                                                                  FontSize="11" 
                                                                  Foreground="#a0a0a0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <Button Grid.Row="2"
                                   Content="âª ANNULER DERNIÃˆRE Ã‰LIMINATION"
                                   Command="{Binding UndoLastEliminationCommand}"
                                   Height="40"
                                   Background="#16213e"
                                   Foreground="White"
                                   FontSize="13"
                                   Margin="0,10,0,0"
                                   ToolTip="Annule l'Ã©limination et retire le kill au killer"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- SECTION FIN DE TOURNOI -->
        <Border Grid.Row="1" 
               Background="#1a1a2e" 
               Visibility="{Binding IsTournamentFinished, Converter={StaticResource BoolToVisibleConverter}}"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               CornerRadius="20"
               Padding="50">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="ðŸ† TOURNOI TERMINÃ‰ ! ðŸ†" 
                          FontSize="48" 
                          FontWeight="Bold" 
                          Foreground="#ffd700"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Vainqueur" 
                          FontSize="24" 
                          Foreground="#a0a0a0"
                          HorizontalAlignment="Center"
                          Margin="0,30,0,10"/>
                <TextBlock Text="{Binding WinnerName}" 
                          FontSize="42" 
                          FontWeight="Bold" 
                          Foreground="#00ff88"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- BOUTON FERMER -->
        <Button Grid.Row="2"
               Content="âœ… FERMER"
               Click="Close_Click"
               Height="50"
               Background="#0f3460"
               Foreground="White"
               FontSize="18"
               FontWeight="Bold"
               Margin="10,10,10,0"/>
    </Grid>
</Window>
