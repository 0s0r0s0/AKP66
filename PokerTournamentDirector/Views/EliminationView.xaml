<Window x:Class="PokerTournamentDirector.Views.EliminationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ’€ Ã‰liminations"
        Height="900" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Ombre rÃ©utilisable -->
        <DropShadowEffect x:Key="CardShadow" Color="Black" Direction="320" ShadowDepth="5" BlurRadius="15" Opacity="0.5"/>

        <!-- Style ComboBox amÃ©liorÃ© -->
        <Style x:Key="BeautifulComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#00ff88"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          Background="{TemplateBinding Background}"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate>
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                  Margin="{TemplateBinding Padding}"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Left"/>
                                                <Path Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="White"
                                                      Margin="0,0,12,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>

                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                      SnapsToDevicePixels="True">
                                    <Border x:Name="DropDownBorder"
                                            Background="#16213e"
                                            BorderThickness="1"
                                            BorderBrush="#00ff88"
                                            CornerRadius="8"
                                            Effect="{StaticResource CardShadow}">
                                        <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1e2a44"/>
                                <Setter Property="BorderBrush" Value="#00ffaa"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter Property="BorderBrush" Value="#00ff88"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1a1a2e"
            CornerRadius="16"
            BorderThickness="1"
            BorderBrush="#0f3460"
            Effect="{StaticResource CardShadow}">

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Background="#0f3460" CornerRadius="12" Padding="24" Margin="0,0,0,20">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ’€" FontSize="42" VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <StackPanel>
                            <TextBlock Text="Ã‰LIMINATIONS" FontSize="28" FontWeight="Bold" Foreground="#00ff88"/>
                            <TextBlock Text="SÃ©lectionnez le joueur Ã©liminÃ©" FontSize="14" Foreground="#a0a0a0" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="{Binding PlayersRemaining}" FontSize="38" FontWeight="Bold" Foreground="#00ff88"/>
                        <TextBlock Text=" joueurs restants" FontSize="16" Foreground="#a0a0a0" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- CONTENU PRINCIPAL -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- ZONE PRINCIPALE -->
                <Border Grid.Column="0" Background="#0f3460" CornerRadius="12" Padding="20" Margin="0,0,16,0"
                        Effect="{StaticResource CardShadow}">

                    <Grid>
                        <!-- LISTE DES JOUEURS -->

                        <!-- LISTE DES JOUEURS -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
              Visibility="{Binding SelectedEliminatedPlayer, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"
              Padding="0,0,8,0">

                            <ItemsControl ItemsSource="{Binding ActivePlayers}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <!-- VirtualizingStackPanel avec les attached properties CORRECTES -->
                                        <VirtualizingStackPanel VirtualizingPanel.IsVirtualizing="True"
                                        VirtualizingPanel.VirtualizationMode="Recycling" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.SelectPlayerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
        CommandParameter="{Binding}"
        Margin="0,0,0,12"
        Padding="0,8"
        Background="#16213e"
        BorderThickness="1"
        BorderBrush="#0f3460"
        Cursor="Hand"
        HorizontalContentAlignment="Center">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="PlayerBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Effect="{StaticResource CardShadow}">
                                                                    <!-- Contenu : nom + kills sur la mÃªme ligne -->
                                                                    <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                                                        <!-- Nom du joueur (toujours blanc) -->
                                                                        <TextBlock Text="{Binding Player.Name}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                                                        <!-- espace entre nom et kills -->

                                                                        <!-- Kills avec emojis + couleur dynamique -->
                                                                        <TextBlock FontSize="20"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center">
                                                                            <TextBlock.Text>
                                                                                <Binding Path="BountyKills" Converter="{StaticResource KillCountToEmojiConverter}"/>
                                                                            </TextBlock.Text>
                                                                            <TextBlock.Foreground>
                                                                                <Binding Path="BountyKills" Converter="{StaticResource KillCountToColorConverter}"/>
                                                                            </TextBlock.Foreground>
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                </Border>

                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="PlayerBorder" Property="Background" Value="#1e2a44"/>
                                                                        <Setter TargetName="PlayerBorder" Property="BorderBrush" Value="#00ff88"/>
                                                                        <Setter TargetName="PlayerBorder" Property="BorderThickness" Value="2"/>
                                                                        <Setter Property="Foreground" Value="#00ff88"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="PlayerBorder" Property="Background" Value="#00cc77"/>
                                                                        <Setter TargetName="PlayerBorder" Property="BorderBrush" Value="#00ff88"/>
                                                                        <Setter Property="Foreground" Value="#1a1a2e"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- CONFIRMATION -->
                        <StackPanel Visibility="{Binding SelectedEliminatedPlayer, Converter={StaticResource NullToVisibilityConverter}}">

                            <!-- JOUEUR Ã‰LIMINÃ‰ -->
                            <Border Background="#16213e" CornerRadius="10" Padding="24" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="JOUEUR Ã‰LIMINÃ‰" FontSize="14" Foreground="#a0a0a0" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding SelectedEliminatedPlayer.Player.Name}"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="#e94560"/>
                                    <TextBlock Text="{Binding PlayersRemaining, StringFormat='Position finale : #{0}'}"
                                               FontSize="16"
                                               Foreground="#ffd700"
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Ã‰LIMINÃ‰ PAR (ComboBox amÃ©liorÃ©) -->
                            <Border Background="#16213e" CornerRadius="10" Padding="24" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Ã‰LIMINÃ‰ PAR" FontSize="14" Foreground="#a0a0a0" Margin="0,0,0,12"/>
                                    <ComboBox ItemsSource="{Binding AvailableKillers}"
                                              SelectedItem="{Binding SelectedKillerPlayer}"
                                              DisplayMemberPath="Player.Name"
                                              Style="{StaticResource BeautifulComboBox}"/>
                                </StackPanel>
                            </Border>

                            <!-- RECAVE -->
                            <Border Background="#16213e" CornerRadius="10" Padding="24" Margin="0,0,0,24"
                                    Visibility="{Binding ShowRebuyOption, Converter={StaticResource BoolToVisibleConverter}}">
                                <StackPanel>
                                    <TextBlock Text="RECAVE" FontSize="14" Foreground="#a0a0a0" Margin="0,0,0,12"/>
                                    <Border CornerRadius="8" Padding="14" Margin="0,0,0,12">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#00ff88"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CanRebuy}" Value="False">
                                                        <Setter Property="Background" Value="#e94560"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding RebuyMessage}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#1a1a2e"
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                    <CheckBox Content="Effectuer la recave immÃ©diatement"
                                              IsChecked="{Binding WillRebuy}"
                                              IsEnabled="{Binding CanRebuy}"
                                              Foreground="White"
                                              FontSize="15"
                                              Visibility="{Binding CanRebuy, Converter={StaticResource BoolToVisibleConverter}}"/>
                                </StackPanel>
                            </Border>

                            <!-- BOUTONS -->
                            <UniformGrid Columns="2" Rows="1" HorizontalAlignment="Stretch">
                                <Button Content="âŒ Annuler"
                                        Command="{Binding CancelSelectionCommand}"
                                        Height="52"
                                        Margin="0,0,6,0"
                                        Background="#2a2a3e"
                                        Foreground="White"
                                        FontSize="16"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#3a3a4e"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Content="âœ… CONFIRMER"
                                        Command="{Binding EliminatePlayerCommand}"
                                        Height="52"
                                        Margin="6,0,0,0"
                                        Background="#e94560"
                                        Foreground="White"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#d03a4f"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </UniformGrid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- HISTORIQUE -->
                <Border Grid.Column="1" Background="#0f3460" CornerRadius="12" Padding="20"
        Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ HISTORIQUE" FontSize="18" FontWeight="Bold" Foreground="#00ff88" Margin="0,0,0,16"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="600">
                            <ItemsControl ItemsSource="{Binding EliminationHistory}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="8" Padding="14" Margin="0,0,0,10">
                                            <!-- Style par dÃ©faut (Ã‰limination) -->
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#16213e"/>
                                                    <Style.Triggers>
                                                        <!-- Recave = fond vert foncÃ© -->
                                                        <DataTrigger Binding="{Binding IsRebuy}" Value="True">
                                                            <Setter Property="Background" Value="#1a4d2e"/>
                                                        </DataTrigger>
                                                        <!-- Annulation = fond orange foncÃ© -->
                                                        <DataTrigger Binding="{Binding IsUndo}" Value="True">
                                                            <Setter Property="Background" Value="#4d3319"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Badge Position (cachÃ© pour recaves) -->
                                                <Border Grid.Column="0" CornerRadius="6" Width="32" Height="32" Margin="0,0,12,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#00ff88"/>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <!-- Masquer pour recaves (Position = 0) -->
                                                                <DataTrigger Binding="{Binding Position}" Value="0">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <!-- Orange pour annulations -->
                                                                <DataTrigger Binding="{Binding IsUndo}" Value="True">
                                                                    <Setter Property="Background" Value="#ff9800"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>

                                                    <TextBlock Text="{Binding Position}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="#1a1a2e"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Contenu principal -->
                                                <StackPanel Grid.Column="1">
                                                    <!-- Nom du joueur -->
                                                    <TextBlock Text="{Binding PlayerName}"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>

                                                    <!-- Killer (seulement pour Ã©liminations et annulations) -->
                                                    <TextBlock FontSize="13" Foreground="#a0a0a0" Margin="0,2,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsRebuy}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding KillerName}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                        <Run Text="par "/>
                                        <Run Text="{Binding KillerName}" Foreground="#00ff88"/>
                                                    </TextBlock>

                                                    <!-- Type d'action avec style conditionnel -->
                                                    <TextBlock Text="{Binding ActionType}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Margin="0,4,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#e74c3c"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsRebuy}" Value="True">
                                                                        <Setter Property="Foreground" Value="#27ae60"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsUndo}" Value="True">
                                                                        <Setter Property="Foreground" Value="#ff9800"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Timestamp -->
                                                <TextBlock Grid.Column="2"
                                           Text="{Binding TimeDisplay}"
                                           FontSize="12"
                                           Foreground="#666666"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

            </Grid>

            <!-- FOOTER -->
            <Border Grid.Row="2" Background="#0f3460" CornerRadius="12" Padding="20" Margin="0,20,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Ã‰liminÃ©s : " FontSize="14" Foreground="#a0a0a0"/>
                        <TextBlock Text="{Binding TotalEliminations}" FontSize="18" FontWeight="Bold" Foreground="#e94560" Margin="6,0,0,0"/>

                        <!-- BOUTON ANNULER DERNIÃˆRE Ã‰LIMINATION -->
                        <Button Content="â†¶ Annuler derniÃ¨re"
                    Command="{Binding UndoLastEliminationCommand}"
                    Height="44"
                    Padding="20,0"
                    Margin="30,0,0,0"
                    Background="#ffd700"
                    Foreground="#1a1a2e"
                    FontSize="14"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TotalEliminations, Converter={StaticResource IntGreaterThanZeroConverter}}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#ffed4e"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#e6c200"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <Button Content="âŒ Fermer"
                Click="Close_Click"
                HorizontalAlignment="Right"
                Height="44"
                Padding="32,0"
                Background="#2a2a3e"
                Foreground="White"
                FontSize="15"
                BorderThickness="0"
                Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3a3a4e"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>