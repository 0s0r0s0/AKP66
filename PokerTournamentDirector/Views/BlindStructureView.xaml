<Window x:Class="PokerTournamentDirector.Views.BlindStructureView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PokerTournamentDirector.Views"
        Title="Structure des blinds" 
        Height="700" Width="600"
        Background="#1a1a2e"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Converter pour affichage niveau/pause -->
        <local:LevelDisplayConverter x:Key="LevelDisplayConverter"/>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#a0a0a0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BreakCellStyle" TargetType="TextBlock" BasedOn="{StaticResource CellTextStyle}">
            <Setter Property="Foreground" Value="#00ff88"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#0f3460" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="📊"
                           FontSize="24"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Structure des blinds" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding TournamentName}" 
                               FontSize="13" 
                               Foreground="#a0a0a0"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <Button Grid.Column="2"
                        Content="✕"
                        Click="Close_Click"
                        Width="36" 
                        Height="36"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="20"
                        BorderThickness="0"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- CONTENU - TABLE DES BLINDS -->
        <Border Grid.Row="1" Background="#16213e" Margin="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- En-têtes de colonnes -->
                    <Border Grid.Row="0" 
                            Background="#0f3460" 
                            BorderThickness="0,0,0,2"
                            BorderBrush="#00ff88">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="1" Text="Niveau" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="2" Text="SB" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="3" Text="BB" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="4" Text="Ante" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="5" Text="Durée" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Liste des niveaux -->
                    <ItemsControl Grid.Row="1" 
                                  ItemsSource="{Binding BlindLevels}"
                                  Margin="0,0,0,10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0,0,0,1" 
                                        BorderBrush="#2a2a3e"
                                        Padding="0,2">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <!-- Ligne actuelle en vert -->
                                                <DataTrigger Binding="{Binding IsCurrentLevel}" Value="True">
                                                    <Setter Property="Background" Value="#1a4d2e"/>
                                                </DataTrigger>
                                                <!-- Hover effect -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1f2937"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Flèche pour le niveau actuel -->
                                        <TextBlock Grid.Column="0"
                                                   Text="▶"
                                                   FontSize="16"
                                                   Foreground="#00ff88"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCurrentLevel}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Niveau (numéro ou nom de pause) -->
                                        <TextBlock Grid.Column="1">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CellTextStyle}">
                                                    <Style.Triggers>
                                                        <!-- Style différent pour les pauses -->
                                                        <DataTrigger Binding="{Binding IsBreak}" Value="True">
                                                            <Setter Property="Foreground" Value="#00ff88"/>
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                            <Setter Property="FontStyle" Value="Italic"/>
                                                        </DataTrigger>
                                                        <!-- Style pour le niveau actuel -->
                                                        <DataTrigger Binding="{Binding IsCurrentLevel}" Value="True">
                                                            <Setter Property="Foreground" Value="#00ff88"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            
                                            <!-- Afficher soit le nom de la pause, soit "Niveau X" -->
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource LevelDisplayConverter}">
                                                    <Binding Path="IsBreak"/>
                                                    <Binding Path="BreakName"/>
                                                    <Binding Path="LevelNumber"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>

                                        <!-- Small Blind -->
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding SmallBlind, StringFormat='{}{0:N0}'}"
                                                   HorizontalAlignment="Right">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CellTextStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsBreak}" Value="True">
                                                            <Setter Property="Text" Value="—"/>
                                                            <Setter Property="Foreground" Value="#505050"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsCurrentLevel}" Value="True">
                                                            <Setter Property="Foreground" Value="#00ff88"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Big Blind -->
                                        <TextBlock Grid.Column="3" 
                                                   Text="{Binding BigBlind, StringFormat='{}{0:N0}'}"
                                                   HorizontalAlignment="Right">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CellTextStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsBreak}" Value="True">
                                                            <Setter Property="Text" Value="—"/>
                                                            <Setter Property="Foreground" Value="#505050"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsCurrentLevel}" Value="True">
                                                            <Setter Property="Foreground" Value="#00ff88"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Ante -->
                                        <TextBlock Grid.Column="4" 
                                                   Text="{Binding Ante, StringFormat='{}{0:N0}'}"
                                                   HorizontalAlignment="Right">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CellTextStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsBreak}" Value="True">
                                                            <Setter Property="Text" Value="—"/>
                                                            <Setter Property="Foreground" Value="#505050"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Ante}" Value="0">
                                                            <Setter Property="Text" Value="—"/>
                                                            <Setter Property="Foreground" Value="#505050"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsCurrentLevel}" Value="True">
                                                            <Setter Property="Foreground" Value="#00ff88"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Durée -->
                                        <TextBlock Grid.Column="5" 
                                                   Text="{Binding DurationMinutes, StringFormat='{}{0} min'}"
                                                   HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource CellTextStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCurrentLevel}" Value="True">
                                                            <Setter Property="Foreground" Value="#00ff88"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#0f3460" Padding="15,12">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Border Background="#1a3a52" CornerRadius="8" Padding="10,6" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total niveaux : " Foreground="#a0a0a0" FontSize="13"/>
                            <TextBlock Text="{Binding TotalLevels}" Foreground="White" FontSize="13" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#1a4d2e" CornerRadius="8" Padding="10,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="▶ Niveau actuel : " Foreground="#00ff88" FontSize="13" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CurrentLevel}" Foreground="#00ff88" FontSize="13" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <Button Content="Fermer"
                        Click="Close_Click"
                        HorizontalAlignment="Right"
                        Width="120"
                        Height="36"
                        Background="#e94560"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        BorderThickness="0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
