                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Moy. Bounty" Binding="{Binding AverageBounties, StringFormat=N1}" Width="100">
