                         Style="{StaticResource TabButton}"
                         Command="{Binding SwitchTabCommand}"
                         CommandParameter="2"/>
            <RadioButton Content="ðŸ‘¥ Joueurs" 
                         GroupName="Tabs"
                         Style="{StaticResource TabButton}"
                         Command="{Binding SwitchTabCommand}"
                         CommandParameter="3"/>
            <RadioButton Content="ðŸ“ Logs" 
                         GroupName="Tabs"
                         Style="{StaticResource TabButton}"
                         Command="{Binding SwitchTabCommand}"
                         CommandParameter="4"/>
        </StackPanel>

